<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/daohang" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="设置"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
           android:textSize="@dimen/txsize_small_xxx"/>

         <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:layout_centerVertical="true"
            >

            <Button
                android:id="@+id/button1"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:onClick="choosepith_back" 
                android:layout_marginLeft="@dimen/title_button_left"
                android:background="@null"
                android:text="@string/back"
                android:textColor="@color/white"
                android:textSize="@dimen/txsize_small_xx" />

            <ImageView
                android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/back_image"  />
        </FrameLayout>

        </RelativeLayout>
	<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    
    >
	    <Button
            android:id="@+id/setting_account"
            android:layout_width="@dimen/register_view_width"
            android:layout_height="@dimen/view_mid_xx_title"
            android:background="@drawable/button"
            android:gravity="center"
             android:layout_marginTop="@dimen/view_mid_xx_title"
            android:text="@string/account"
            android:textSize="@dimen/txsize_mid_x"
            android:textColor="@color/bg"
             />
	    <Button
            android:id="@+id/setting_opinion"
             android:layout_width="@dimen/register_view_width"
             android:layout_height="@dimen/view_mid_xx_title"
            android:background="@drawable/button"
            android:layout_marginTop="120dp"
            android:text="@string/opinion"
            android:gravity="center"
            android:textSize="@dimen/txsize_mid_x"
            android:textColor="@color/bg"
             />
	    <Button
            android:id="@+id/setting_me"
            android:layout_width="@dimen/register_view_width"
            android:layout_height="@dimen/view_mid_xx_title"
            android:layout_marginTop="200dp"
            android:background="@drawable/button"
            android:text="@string/me"
            android:gravity="center"
            android:textSize="@dimen/txsize_mid_x"
            android:textColor="@color/bg"
             />
	    <Button
            android:id="@+id/setting_exit"
            android:layout_width="@dimen/register_view_width"
            android:layout_height="@dimen/view_mid_xx_title"
            android:layout_alignParentBottom="true"
            android:background="@drawable/button"
            android:text="@string/exit"
            android:gravity="center"
            android:textSize="@dimen/txsize_mid_x"
            android:textColor="@color/bg"
             />
	</RelativeLayout>
</LinearLayout>
