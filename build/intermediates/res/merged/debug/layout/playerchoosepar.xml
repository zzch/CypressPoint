<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="杆数"
        android:id="@+id/textView14"
        android:textSize="18dp"
        android:layout_below="@+id/linearLayout4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout4">

        <FrameLayout
            android:id="@+id/frameLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_alignBottom="@+id/bdhmidline"
            >

        <RelativeLayout
            android:id="@+id/myself_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            >

            <ImageView
                android:id="@+id/myself_bg"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:src="@drawable/hongse" />
        </RelativeLayout>

        <com.meg7.widget.CircleImageView
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="3dp"
            android:id="@+id/p1SelectParImage"

            />
           </FrameLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="黄大志"
            android:textColor="#ff0000"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:layout_marginLeft="3dp"
            android:id="@+id/pSelectParName"/>
    </LinearLayout>

    <TextView
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/selectppars"
        android:layout_below="@+id/textView14"
        android:maxLength="2"
        android:background="@drawable/ganshuchengji"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="26dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/selectppars"
        android:layout_marginTop="90dp"
        >



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_centerHorizontal="true"
       >


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_weight="1">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="1"
                android:id="@+id/pselectpar1"
                android:layout_weight="1"
                android:textSize="20dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/jianpan"
               />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="2"
                android:id="@+id/pselectpar2"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:background="@drawable/jianpan"
                android:textSize="20dp"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/jianpan"
                android:text="3"
                android:id="@+id/pselectpar3"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:textSize="20dp"

              />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/jianpan"
                android:text="4"
                android:id="@+id/pselectpar4"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:textSize="20dp"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/jianpan"
                android:text="5"
                android:id="@+id/pselectpar5"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:textSize="20dp"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/jianpan"
                android:text="6"
                android:id="@+id/pselectpar6"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:textSize="20dp"
                />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/jianpan"
                android:text="7"
                android:id="@+id/pselectpar7"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:textSize="20dp"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/jianpan"
                android:text="8"
                android:id="@+id/pselectpar8"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:textSize="20dp"
               />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/jianpan"
                android:text="9"
                android:id="@+id/pselectpar9"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:textSize="20dp"
                />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="0dp"
            android:layout_weight="1">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/jianpan1"

                android:id="@+id/pselectpardel"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:textSize="20dp"
               />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/jianpan"
                android:text="0"
                android:id="@+id/pselectpar0"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:textSize="20dp"
               />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/jianpan2"
                android:id="@+id/pselectparconfirm"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:textSize="20dp"
                />
        </LinearLayout>
    </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
