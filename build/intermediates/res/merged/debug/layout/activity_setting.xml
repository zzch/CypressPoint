<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/daohang" >

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true" >

            <Button
                android:id="@+id/back"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_marginLeft="@dimen/title_button_left"
                android:background="@null"
                android:onClick="onClick"
                android:text="@string/back"
                android:textColor="@color/white"
                android:textSize="@dimen/txsize_small_xx" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/back_image" />
        </FrameLayout>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/setting"
            android:textColor="@color/white"
            android:textSize="@dimen/txsize_small_xxx" />

        <Button
            android:id="@+id/pk"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="-10dp"
            android:background="@null"
            android:text="@string/pk"
            android:textColor="@color/white"
            android:textSize="@dimen/txsize_small_xx"
            android:visibility="gone" />
    </RelativeLayout>
    
    <View 
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/fengexian"
        android:layout_marginTop="25dp"
        />

    <RelativeLayout
        android:id="@+id/shouji"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_mid_xx_title"
        android:background="@color/white"
         >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="手机号" 
            android:textColor="@color/hei2"
            android:textSize="@dimen/txsize_small_a"
            />

        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="40dp"
            android:textSize="@dimen/txsize_small_a"
            android:text="18363172323" />
        
         <ImageView
                android:layout_width="@dimen/view_small_xx"
                android:layout_height="@dimen/view_small_xx"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/infor_view_xx"
                android:visibility="gone"
                android:src="@drawable/icon_arrow" />
    </RelativeLayout>
 <View 
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/fengexian"
        />
 
 <View 
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/fengexian"
         android:layout_marginTop="30dp"
        />
    <RelativeLayout
        android:id="@+id/zhanghao"
        android:layout_width="match_parent"
         android:layout_height="@dimen/view_mid_xx_title"
        android:background="@color/white"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:textSize="@dimen/txsize_small_a"
            android:text="帐号密码" />
        
         <ImageView
                android:layout_width="@dimen/view_small_xx"
                android:layout_height="@dimen/view_small_xx"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/infor_view_xx"
                android:src="@drawable/icon_arrow" />
    </RelativeLayout>
    <View 
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/fengexian"
        />

</LinearLayout><!-- From: file:/D:/Development/Projects/CypressPoint/res/layout/activity_setting.xml -->