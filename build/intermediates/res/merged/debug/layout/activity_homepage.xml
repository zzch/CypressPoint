<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/daohang"
        android:gravity="center_vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="47dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="我爱高尔夫"
            android:textColor="@color/white"
            android:textSize="@dimen/txsize_small_xxx" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/homepage_match"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/jingjibisai"
        android:onClick="onClick"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="竞技比赛"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="80dp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttondb"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/yulemoshi"
        android:onClick="onClick"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="娱乐模式"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="80dp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/homepage_statistics"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/jishutongji"
        android:onClick="onClick"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="技术统计"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="80dp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/homepage_personal_center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/gerenzhongxin"
        android:onClick="onClick"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个人中心"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="75dp"
            />
    </LinearLayout>

</LinearLayout><!-- From: file:/D:/workspace/GolfAndroid/res/layout/activity_homepage.xml -->