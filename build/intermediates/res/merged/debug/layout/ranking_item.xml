<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/color_myself"
        >
        <!-- 在这里加颜色 -->
        <RelativeLayout 
            
            android:layout_width="45dp"
            android:layout_height="100dp"  
            android:layout_centerVertical="true" 
             
             android:gravity="center"  
            >
            <!-- 用户排名 -->
            <TextView 
                android:id="@+id/ranking_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:gravity="center"
                android:layout_centerVertical="true"  
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"
                android:textSize="@dimen/txsize_mid_xx"
               
                /> 
                
            <ImageView 
                android:id="@+id/image_rank"
                android:layout_width="@dimen/create_image_view"
                android:layout_height="@dimen/create_image_view"
                android:gravity="center"
                android:layout_centerVertical="true"  
                android:layout_centerHorizontal="true"
                android:visibility="gone"
                />
        </RelativeLayout>
        <!-- 用户头像 -->
        <cn.com.zcty.ILovegolf.tools.CircleImageView 
            android:id="@+id/ranking_head_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50dp"
            android:src="@drawable/hugh"
            />
        <TextView 
            android:id="@+id/ranking_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="130dp"
            android:text="用户name"
            android:textSize="@dimen/txsize_small_x"
            android:textColor="@color/hei2"
            />
        <RelativeLayout 
            android:id="@+id/ranking_score"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            >

            <TextView
                android:id="@+id/score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="-6"
                android:textColor="@color/hei2"
                android:textSize="@dimen/txsize_large_x" />
            
             <TextView
            android:id="@+id/count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="25dp"
          
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:text="18"
            android:textColor="@color/hei5" />
               
        </RelativeLayout>

       

    </RelativeLayout>
    <View 
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/fengexian"
        />

</LinearLayout>
