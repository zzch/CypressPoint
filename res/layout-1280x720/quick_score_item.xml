<?xml version="1.0" encoding="utf-8"?>
  <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:id="@+id/xlist_item_relayout"
    android:background="@drawable/item_onclick"
 
    >
        <LinearLayout 
          android:layout_width="246px"
          android:layout_height="200px"
          android:orientation="horizontal"
          android:gravity="center"
          
          > 
         <TextView 
           android:id="@+id/Pole_number"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:gravity="center"
           android:text="77"
           android:textSize="80px"
           android:textColor="@color/green"
            />

         <ImageView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:src="@drawable/e_image_o8" 
             android:layout_marginLeft="20dip"
             android:layout_marginTop="30dip"
             />
      </LinearLayout>
      

    <LinearLayout 
    android:id="@+id/content"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >
     <LinearLayout 
         android:id="@+id/layout"
        android:layout_width="414px"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical"
         >
          <TextView 
           android:id="@+id/kpitname"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="@string/pith_name"
           android:textColor="#a4a4a4"
           android:textSize="26px"
           android:layout_marginTop="15px"
          />
          
          <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
              >
              <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="26px"
                android:src="@drawable/calendar" 
                  />
              <TextView 
               android:id="@+id/time"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="02月02号"
               android:textSize="30px"
               android:textColor="#ced1d4"
               android:layout_marginTop="28px"
               android:layout_marginLeft="20px"
              /> 
             
           </LinearLayout>
          
          <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" 
              >
               <TextView
               android:id="@+id/practice"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" 
               android:text="练习赛"
               android:gravity="center"
               android:textColor="@color/gray"
               android:layout_marginTop="26px"
               android:background="@drawable/e_normal"
              />
               <LinearLayout 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/e_normal"
                android:orientation="horizontal"
                android:layout_marginTop="26px"
                android:layout_marginLeft="13px"
                android:gravity="center"
                   >
               <TextView 
               android:id="@+id/gan_number"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text=""
               android:gravity="center"
               android:textColor="@color/gray"
               
              /> 
              
               <TextView 
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="/18"
               android:gravity="center"
               android:textColor="@color/gray"
             
              /> 
              </LinearLayout>
          </LinearLayout> 
        </LinearLayout>
        
      <ImageView
          android:layout_width="60px"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:src="@drawable/e_icon_arrow" />
     </LinearLayout>
     

    
     
      
   </LinearLayout>
