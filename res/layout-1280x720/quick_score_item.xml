<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/hsv"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:scrollbars="none" >
    
    
  <LinearLayout 
    android:id="@+id/hsv"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
 
    >
    
        <LinearLayout 
          android:layout_width="246px"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:gravity="center"
          android:layout_marginTop="15dip"
          android:layout_marginLeft="10dip"
          >
          
         <TextView 
           android:id="@+id/Pole_number"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:gravity="center"
           android:text="77"
           android:textSize="80px"
            />
          <ImageView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:src="@drawable/e_image_o8"
           android:layout_marginLeft="80px"
           android:layout_marginTop="132px"
            />
      </LinearLayout>
      

    <LinearLayout 
    android:id="@+id/content"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >
     <LinearLayout 
         android:id="@+id/layout"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
         >
          <TextView 
           android:id="@+id/kpitname"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="@string/pith_name"
          android:textColor="#a4a4a4"
           android:layout_marginTop="30px"
          />
          
          <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
              >
              <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/calendar" 
                  />
              <TextView 
               android:id="@+id/time"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="2013-6-16 15:40"
               android:layout_marginTop="10dip"
              /> 
             
          </LinearLayout>
          
          <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" 
              >
               <TextView
               android:id="@+id/practice"
               android:layout_width="50dip"
               android:layout_height="30dip" 
               android:text="练习赛"
               android:gravity="center"
               android:layout_marginTop="10dip"
               android:background="@drawable/u1233_normal"
              />
               <TextView 
               android:id="@+id/gan_number"
               android:layout_width="50dip"
               android:layout_height="30dip"
               android:text="2/18"
               android:gravity="center"
               android:layout_marginTop="10dip"
              android:background="@drawable/u1233_normal"
              /> 
          </LinearLayout>
          
          
          
          
     </LinearLayout>
    
    

      <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dip"
          android:src="@drawable/u1095_normal" />
      
     </LinearLayout>
       <LinearLayout 
       android:id="@+id/action"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       >
       
       <Button
           android:id="@+id/butDelete"
           android:layout_width="60dip"
           android:layout_height="wrap_content"
           android:text="删除" 
           android:layout_marginLeft="15dip"
           android:layout_marginTop="10dip"
           android:textColor="#ff0000"
           />
       </LinearLayout>
   </LinearLayout>
</HorizontalScrollView>