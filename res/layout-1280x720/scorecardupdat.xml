         <cn.com.zcty.ILovegolf.activity.tools.WheelView android:id="@+id/mashu"
			android:layout_height="wrap_content"
			android:layout_width="fill_parent"
			android:layout_weight="1"/>
		<cn.com.zcty.ILovegolf.activity.tools.WheelView android:id="@+id/mingzhong"
			android:layout_height="wrap_content"
			android:layout_width="fill_parent"
			android:layout_weight="1"/>
			
			-->  
      </LinearLayout>

</LinearLayout>
