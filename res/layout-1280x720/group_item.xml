<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

   >
    <TextView 
        android:id="@+id/group_item1" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="选择球场"
        android:textSize="20dip"
        />

    <ImageView
        android:id="@+id/top_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/group_item1"
        android:layout_alignParentRight="true"
        android:src="@drawable/u378_normal" />

    <TextView
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/group_item1"
        android:layout_alignBottom="@+id/group_item1"
        android:layout_toLeftOf="@+id/top_bottom"
        android:text="ab" />

</RelativeLayout>
