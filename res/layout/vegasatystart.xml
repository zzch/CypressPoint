<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    >
    <include
        android:id="@+id/i_vtitle"
        layout="@layout/etmode_title"></include>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/i_vtitle"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/ddzholes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="7dp"
            android:textSize="16dp"
            android:text="球洞1"/>

        <TextView
            android:id="@+id/ddzpars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="标准杆"
            android:textSize="20dp"
            android:textAppearance="?android:attr/textAppearanceLarge"/>

    </RelativeLayout>

    <Button
        android:id="@+id/ddzselectpars"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/relativeLayout"
        android:layout_centerHorizontal="true"
        android:background="@drawable/ganshuluru"
        android:layout_marginTop="25dp"
        android:textColor="@color/white"
        android:textSize="26dp"
        android:text="一"/>


    <LinearLayout
        android:id="@+id/ddzllayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/linearLayout2">

        <com.meg7.widget.CircleImageView
            android:id="@+id/ddzp1mage"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:src="@drawable/hugh"
            android:layout_marginLeft="10dp"
            />

        <com.meg7.widget.CircleImageView
            android:id="@+id/ddzp2image"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:src="@drawable/hugh"
            android:layout_marginLeft="30dp"
            />

        <com.meg7.widget.CircleImageView
            android:id="@+id/ddzp3image"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:src="@drawable/hugh"
            android:layout_marginLeft="30dp"
            />

        <com.meg7.widget.CircleImageView
            android:id="@+id/ddzp4image"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:src="@drawable/hugh"
            android:layout_marginLeft="30dp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ddzllayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ddzllayout1"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="85dp"
            android:layout_height="60dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/mingzi_bj"
            android:layout_alignParentEnd="true"
            android:layout_weight="1"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/ddzp1stname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"

                android:singleLine="true"
                android:ellipsize="end"
                android:maxLength="4"
                android:textColor="#ff0000"
               />

            <ImageView
                android:id="@+id/ddzp1stgold"
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:src="@drawable/jinbi"
                android:layout_marginLeft="5dp"
                android:layout_below="@+id/ddzp1stname"/>

            <TextView
                android:id="@+id/ddzp1stscore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ddzp1stname"
                android:layout_toRightOf="@+id/ddzp1stgold"
                android:textColor="#ff961d"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:text="0"
                android:textSize="18dp"/>

            <TextView
                android:id="@+id/ddzp1stscore_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ddzp1stscore"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/ddzp1stgold"
                android:text="0"
                android:textColor="@color/red"
                android:visibility="gone"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="85dp"
            android:layout_height="60dp"
            android:layout_marginLeft="3dp"
            android:background="@drawable/mingzi_bj"
            android:layout_alignParentEnd="true"
            android:layout_weight="1"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/ddzp2stname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:maxLength="4"
                android:textColor="#ff0000"
               />

            <ImageView
                android:id="@+id/ddzp2stgold"
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:src="@drawable/jinbi"
                android:layout_marginLeft="5dp"
                android:layout_below="@+id/ddzp2stname"/>

            <TextView
                android:id="@+id/ddzp2stscore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ddzp2stname"
                android:layout_toRightOf="@+id/ddzp2stgold"
                android:textColor="#ff961d"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:text="0"
                android:textSize="18dp"/>

            <TextView
                android:id="@+id/ddzp2stscore_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ddzp2stscore"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/ddzp2stgold"
                android:text="0"
                android:textColor="@color/red"
                android:visibility="gone"/>
        </RelativeLayout>



        <RelativeLayout
            android:layout_width="85dp"
            android:layout_height="60dp"
            android:layout_marginLeft="3dp"
            android:background="@drawable/mingzi_bj"
            android:layout_alignParentEnd="true"
            android:layout_weight="1"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/ddzp3stname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:maxLength="4"
                android:textColor="#ff8000"
                />

            <ImageView
                android:id="@+id/ddzp3stgold"
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:src="@drawable/jinbi"
                android:layout_marginLeft="5dp"
                android:layout_below="@+id/ddzp3stname"/>

            <TextView
                android:id="@+id/ddzp3stscore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ddzp3stname"
                android:layout_toRightOf="@+id/ddzp3stgold"
                android:textColor="#ff961d"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:text="0"
                android:textSize="18dp"/>

            <TextView
                android:id="@+id/ddzp3stscore_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ddzp3stscore"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/ddzp3stgold"
                android:text="0"
                android:textColor="@color/red"
                android:visibility="gone"/>
        </RelativeLayout>




        <RelativeLayout
            android:layout_width="85dp"
            android:layout_height="60dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/mingzi_bj"
            android:layout_alignParentEnd="true"
            android:layout_weight="1"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/ddzp4stname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:maxLength="4"
                android:textColor="#ff8000"
               />

            <ImageView
                android:id="@+id/ddzp4stgold"
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:src="@drawable/jinbi"
                android:layout_marginLeft="5dp"
                android:layout_below="@+id/ddzp4stname"/>

            <TextView
                android:id="@+id/ddzp4stscore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ddzp4stname"
                android:layout_toRightOf="@+id/ddzp4stgold"
                android:textColor="#ff961d"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:text="0"
                android:textSize="18dp"/>

            <TextView
                android:id="@+id/ddzp4stscore_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ddzp4stscore"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/ddzp4stgold"
                android:text="0"
                android:textColor="@color/red"
                android:visibility="gone"/>
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/ddzprevioushole"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_weight="1.2"
            android:background="#08bc50"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:text="上一洞"/>

        <Button
            android:id="@+id/ddzresultcomfirm"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:background="#ff961d"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:text="确定成绩"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:layout_below="@+id/ddzselectpars">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:textSize="16dp"
            android:textColor="#fff000"
            android:text="1号发球"/>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:textSize="16dp"
            android:textColor="#fff000"
            android:text="2号发球"/>

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:textSize="16dp"
            android:textColor="#ff0000"
            android:text="3号发球"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:textSize="16dp"
            android:textColor="#ff0000"
            android:text="4号发球"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ddzlayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ddzllayout2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnddzp1stpars"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:textColor="@color/white"
            android:layout_marginLeft="5dp"
            android:background="@drawable/ganshuluru"
            android:textSize="26dp"
            android:text="一"/>

        <Button
            android:id="@+id/btnddzp2stpars"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:textColor="@color/white"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ganshuluru"
            android:textSize="26dp"
            android:text="一"/>

        <Button
            android:id="@+id/btnddzp3stpars"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:textColor="@color/white"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ganshuluru"
            android:textSize="26dp"
            android:text="一"/>

        <Button
            android:id="@+id/btnddzp4stpars"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:textColor="@color/white"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ganshuluru"
            android:textSize="26dp"
            android:text="一"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ddzlayout3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/tv_ddzbird1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Birdie X2"
            android:textColor="@color/white"
            android:background="@drawable/drawable_solid_cor5_blue_"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/tv_ddzbird2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:background="@drawable/drawable_solid_cor5_blue_"
            android:text="Birdie X2"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/tv_ddzbird3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:background="@drawable/drawable_solid_cor5_blue_"
            android:text="Birdie X2"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/tv_ddzbird4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:background="@drawable/drawable_solid_cor5_blue_"
            android:text="Birdie X2"
            android:visibility="gone"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayout3"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="杆数"
            android:textAppearance="?android:attr/textAppearanceMedium"
            />
    </LinearLayout>

</RelativeLayout>

