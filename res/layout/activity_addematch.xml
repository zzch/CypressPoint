<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@anim/pingpu"
    android:orientation="vertical"
     android:gravity="center_horizontal"
    >
   
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@anim/title_pingpu" >

        <Button
            android:id="@+id/k_build"
             android:layout_width="80dp"
            android:layout_height="47dp" 
            android:layout_alignParentRight="true"
            android:layout_marginRight="-10dp"
            android:background="@drawable/button_bg_pingpu"
            android:onClick="onclick"
            android:text="@string/new_build"
            android:textColor="@color/gold"
            android:visibility="gone"
            android:textSize="@dimen/txsize_small_xx" />

         <FrameLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
        

        <Button
            android:id="@+id/add_back"
            android:layout_width="80dp"
            android:layout_height="47dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/title_button_left"
            android:background="@drawable/button_bg_pingpu"
            android:text="@string/back"
            android:textColor="@color/gold"
            android:textSize="@dimen/txsize_small_xx" 
           android:onClick="onclick"
             />
        
        <ImageView
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:layout_marginTop="6dp"
            android:src="@drawable/back_image" />
		</FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="47dp"
            android:gravity="center"        
            android:layout_centerHorizontal="true"
            android:text="加入比赛"
            android:textColor="@color/gold"
            android:textSize="@dimen/txsize_mid_x" />
    </RelativeLayout>
    
    
    <TextView 
        android:layout_width="@dimen/view_tongyong"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/shouye_name_top"
        android:textSize="@dimen/txsize_small_xx" 
        android:text="您的朋友创建比赛后可以获得4位数字口令输入后即可加入到TA的比赛"
        />
    
    <LinearLayout
        android:layout_width="@dimen/view_tongyong"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
         android:layout_marginTop="@dimen/shouye_name_top"
        android:orientation="horizontal" >

        <TextView 
            android:id="@+id/kouling_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2"
            android:gravity="center"
            />
        <TextView 
            android:id="@+id/kouling_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2"
            android:gravity="center"
            />
        <TextView 
            android:id="@+id/kouling_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2"
            android:gravity="center"
            />
        <TextView 
            android:id="@+id/kouling_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2"
            android:gravity="center"
            />
        
    </LinearLayout>

    <View
                android:layout_width="@dimen/view_tongyong"
                android:layout_height="0.5dp"
                android:layout_marginTop="@dimen/shouye_name_top"
                android:background="@color/gold_half" />
    
     <LinearLayout
        android:layout_width="@dimen/view_tongyong"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/shouye_name_top"
        android:orientation="horizontal" >
        <ImageView
            android:layout_width="25dp"
            android:layout_height="20dp"
          
            android:src="@drawable/back_image" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            
            android:gravity="center"
            android:text="如何加入到朋友的比赛中？"
            android:textSize="@dimen/txsize_small_xx" />

         </LinearLayout>
         
     <TextView 
        android:layout_width="@dimen/view_tongyong"
        android:layout_height="wrap_content"
        
        android:layout_marginTop="@dimen/shouye_name_top"
        android:textSize="@dimen/txsize_small_xx" 
        android:text="请您让TA点击”比赛“，之后点击”创建新比赛“，选择球场后点击排行榜，输入上面的4位数字口令后，点击加入，即可加入到您创建的比赛中，共同体验高尔夫的乐趣。"
        />

</LinearLayout>