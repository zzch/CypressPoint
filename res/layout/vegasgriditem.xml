<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent" >


    <FrameLayout
        android:id="@+id/frameLayoutitem1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"

        android:layout_marginLeft="15dp"
        >

    <RelativeLayout
        android:id="@+id/myself_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        >

        <ImageView
            android:id="@+id/myself_bg"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:src="@drawable/hongse" />
    </RelativeLayout>
    <com.meg7.widget.CircleImageView
        android:id="@+id/vegasplayerimg"
        android:scaleType="centerCrop"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="3dp"
        android:layout_centerHorizontal="true" >
    </com.meg7.widget.CircleImageView>

    </FrameLayout>

    <TextView
        android:id="@+id/vegasplayername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/frameLayoutitem1"
        android:textSize="20sp"
        android:singleLine="true"
        android:ellipsize="end"
        android:maxLength="4"
        android:layout_centerHorizontal="true" >
    </TextView>

</RelativeLayout>