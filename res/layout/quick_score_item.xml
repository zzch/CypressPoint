<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_parent"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/item_onclick" >
	<LinearLayout 
	    android:layout_width="wrap_content" 
	    android:layout_height="wrap_content"
	     android:id="@+id/xlist_item_relayout"
	      android:layout_centerVertical="true"
	      >
	    
	    
	    
    <LinearLayout
        android:layout_width="@dimen/view_large_x"
        android:layout_height="@dimen/view_mid_xxx"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/Pole_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:gravity="center"
            android:text="33"
            android:textColor="@color/green"
            android:textSize="@dimen/txsize_large_x" />

        <ImageView
            android:id="@+id/image_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           
            android:layout_marginTop="25dp"
            android:src="@drawable/e_image_o8" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="@dimen/view_large_xxx"
            android:layout_height="@dimen/view_mid_xxx"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/kpitname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@string/pith_name"
                android:textColor="#a4a4a4"
                android:textSize="@dimen/txsize_small_x" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/view_small_x"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="@dimen/view_small_xx_w"
                    android:layout_height="@dimen/view_small_xx_w"
                    android:src="@drawable/calendar" />

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/view_small_x"
                    android:text="02月02号"
                    android:textColor="#ced1d4"
                    android:textSize="@dimen/txsize_small_x" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/view_small_x"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/practice"
                    android:layout_width="@dimen/view_mid_xx_x"
                    android:layout_height="@dimen/view_small_xx"
                    android:background="@drawable/e_normal"
                    android:gravity="center"
                    android:text="练习赛"
                    android:textColor="@color/gray" />

                <LinearLayout
                    android:layout_width="@dimen/view_mid_xx_x"
                    android:layout_height="@dimen/view_small_xx" 
                    android:layout_marginLeft="@dimen/view_small_x"
                    android:background="@drawable/e_normal"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/gan_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/gray" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="/18"
                        android:textColor="@color/gray" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

       
    </LinearLayout>
</LinearLayout>
    <FrameLayout
        android:layout_width="@dimen/view_mid_xxx"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
       
        android:padding="15dp" >

        <TextView
            android:id="@+id/tv_functions"
            android:layout_width="@dimen/view_mid_xxx"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/view_small_xx_w"
            android:gravity="center"
            android:text="删除"
            android:textColor="#ff0000" 
            
            />

       <ImageView
            android:id="@+id/tv_coating"
            android:layout_width="@dimen/view_mid_xxx"
            android:layout_height="@dimen/view_small_xx"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/view_small_xx"
            android:background="@color/black"
            android:src="@drawable/e_icon_arrow" 
            android:visibility="gone" /> 
    </FrameLayout>

</RelativeLayout>