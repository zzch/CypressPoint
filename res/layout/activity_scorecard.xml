<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@anim/pingpu"
     >

    <RelativeLayout 
       android:layout_width="match_parent"
       android:layout_height="50dp"
       android:background="@anim/title_pingpu"
         >
         <Button 
             android:id="@+id/scorecard_back"
             android:layout_width="50dp"
             android:layout_height="25dp"
             android:layout_alignParentLeft="true"
             android:layout_centerVertical="true"
             android:background="@drawable/back_button"
             android:layout_marginLeft="10dp"
             android:onClick="onclick"
           />
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_centerHorizontal="true"
             android:layout_centerVertical="true"
             android:gravity="center"
             android:text="@string/score_card"
             android:textColor="@color/gold"
             android:textSize="@dimen/txsize_mid_x" />
           <Button 
           android:id="@+id/scorecard_score"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
          android:layout_centerVertical="true"
           android:layout_alignParentRight="true"
           android:background="@null"
           android:textColor="@color/gold"
           android:text="@string/button_count"
           android:onClick="onclick"
           android:textSize="@dimen/txsize_small_xx"
             />
     </RelativeLayout>

   <GridView
       android:id="@+id/gridView1"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:numColumns="2" >
   </GridView>
   
</LinearLayout>
