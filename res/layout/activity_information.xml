<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@anim/pingpu"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@anim/title_pingpu" >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="7dp"
            android:src="@drawable/back_image" />

        <Button
            android:id="@+id/information_back"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="13dp"
            android:background="@null"
            android:text="返回"
            android:textColor="@color/gold"
            android:textSize="@dimen/txsize_small_xx" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/myself"
            android:layout_marginTop="10dp"
            android:textColor="@color/gold"
            android:textSize="@dimen/txsize_mid_x" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/information_head_image"
                android:layout_width="350dp"
                android:layout_height="70dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/button_focused"
                android:gravity="center_vertical" >

                <cn.com.zcty.ILovegolf.tools.CircleImageView
                    android:id="@+id/information_head"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginBottom="5dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30dp"
                    android:src="@drawable/hugh" />

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="@dimen/view_small_xx"
                    android:layout_height="@dimen/view_small_xx"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/icon_arrow" />

                <TextView
                    android:id="@+id/information_tishi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/information_head"
                    android:text="更换头像"
                    android:textColor="@color/gold"
                    android:textSize="@dimen/txsize_mid_x" />
            </RelativeLayout>

            
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="名称"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/gold_70"
                    android:textSize="@dimen/txsize_small_xxx" />

                 <LinearLayout
                  android:layout_width="340dp"
                  android:layout_height="50dp"
                  android:gravity="center_vertical"
                  android:background="@drawable/e_button_pressed"
                  android:layout_marginLeft="10dp"
                  android:layout_marginTop="5dp"
                  android:orientation="horizontal" >
                  
                <EditText
                    android:id="@+id/information_name"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:background="@null"
                    android:text=" "
                    android:textColor="@color/gold" />
                </LinearLayout>
          

           

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="性别"
                     android:layout_marginTop="10dp"
                    android:textColor="@color/gold_70"
                    android:textSize="@dimen/txsize_small_xxx" />
  
              <LinearLayout
                  android:layout_width="345dp"
                  android:layout_height="55dp"
                  android:gravity="center_vertical"
                  android:background="@drawable/button_focused"
                  android:layout_marginLeft="5dp"
                  android:layout_marginTop="5dp"
                  android:orientation="horizontal" >

                <TextView
                    android:id="@+id/information_sex"
                    android:layout_width="295dp"
                    android:layout_height="55dp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:text="男"
                    android:textColor="@color/gold"
                    android:textSize="@dimen/txsize_small_xx" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="@dimen/view_small_xx"
                    android:layout_height="@dimen/view_small_xx"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/information_brithday"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/image_icon" />

            </LinearLayout>

            <cn.com.zcty.ILovegolf.tools.WheelView
                android:id="@+id/information_sex_wheel"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:onClick="onClick"
                android:visibility="gone" />

          <LinearLayout
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="生日"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/gold_70"
                    android:textSize="@dimen/txsize_small_xxx" />
           
                <LinearLayout
                  android:layout_width="345dp"
                  android:layout_height="55dp"
                  android:gravity="center_vertical"
                  android:background="@drawable/button_focused"
                  android:layout_marginLeft="5dp"
                  android:layout_marginTop="5dp"
                  android:orientation="horizontal" >
                <TextView
                    android:id="@+id/information_brithday"
                    android:layout_width="295dp"
                    android:layout_height="55dp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:text=" 1989-12-1"
                    android:textColor="@color/gold"
                    android:textSize="@dimen/txsize_small_xx" />
             
                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="@dimen/view_small_xx"
                    android:layout_height="@dimen/view_small_xx"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/information_brithday"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/image_icon" />
           
                 </LinearLayout>
                 
              </LinearLayout>
            <LinearLayout
                android:id="@+id/information_brithday_wheel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal"
                android:visibility="gone" >

                <cn.com.zcty.ILovegolf.tools.WheelView
                    android:id="@+id/information_brithday_wheel_year"
                    android:layout_width="wrap_content"
                    android:layout_height="170dp"
                    android:layout_weight="1" />

                <cn.com.zcty.ILovegolf.tools.WheelView
                    android:id="@+id/information_brithday_wheel_month"
                    android:layout_width="wrap_content"
                    android:layout_height="170dp"
                    android:layout_weight="1" />

                <cn.com.zcty.ILovegolf.tools.WheelView
                    android:id="@+id/information_brithday_wheel_day"
                    android:layout_width="wrap_content"
                    android:layout_height="170dp"
                    android:layout_weight="1" />
            </LinearLayout>

           

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="年龄"
                     android:layout_marginTop="10dp"
                    android:textColor="@color/gold_70"
                    android:textSize="@dimen/txsize_small_xxx" />
                
             <LinearLayout
                  android:layout_width="345dp"
                  android:layout_height="55dp"
                  android:gravity="center_vertical"
                  android:background="@drawable/button_focused"
                  android:layout_marginLeft="5dp"
                  android:layout_marginTop="5dp"
                  android:orientation="horizontal" >
                <TextView
                    android:id="@+id/information_year"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginLeft="15dp"
                    android:gravity="center_vertical"
                    android:text="24"
                    android:textColor="@color/gold"
                    android:textSize="@dimen/txsize_small_xx" />

               
             </LinearLayout>

            

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="地区"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/gold_70"
                    android:textSize="@dimen/txsize_small_xxx" />

                <LinearLayout
                  android:layout_width="345dp"
                  android:layout_height="55dp"
                  android:gravity="center_vertical"
                  android:background="@drawable/button_focused"
                  android:layout_marginLeft="5dp"
                  android:layout_marginTop="5dp"
                  android:orientation="horizontal" >
                <TextView
                    android:id="@+id/information_area"
                   android:layout_width="295dp"
                    android:layout_height="55dp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:text="北京市-海淀区"
                    android:textColor="@color/gold"
                    android:textSize="@dimen/txsize_small_xx" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="@dimen/view_small_xx"
                    android:layout_height="@dimen/view_small_xx"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/information_area"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/image_icon" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/information_area_wheel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal"
                android:visibility="gone" >

                <cn.com.zcty.ILovegolf.tools.WheelView
                    android:id="@+id/information_brithday_area_qu"
                    android:layout_width="wrap_content"
                    android:layout_height="170dp"
                    android:layout_weight="1" />

                <cn.com.zcty.ILovegolf.tools.WheelView
                    android:id="@+id/information_brithday_area_shi"
                    android:layout_width="wrap_content"
                    android:layout_height="170dp"
                    android:layout_weight="1" />

                <cn.com.zcty.ILovegolf.tools.WheelView
                    android:id="@+id/information_brithday_area_xian"
                    android:layout_width="wrap_content"
                    android:layout_height="170dp"
                    android:layout_weight="1" />
            </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="签名"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/gold_70"
                    android:textSize="@dimen/txsize_small_xxx" />
                
                 <LinearLayout
                  android:layout_width="340dp"
                  android:layout_height="80dp"
                  android:gravity="center_vertical"
                  android:background="@drawable/e_button_pressed"
                  android:layout_marginLeft="10dp"
                  android:layout_marginTop="5dp"
                  android:orientation="horizontal" >

                <EditText
                    android:id="@+id/information_qianming"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginLeft="15dp"
                    android:gravity="center_vertical"
                    android:background="@null"
                    android:hint="请设置您的个性签名"
                    android:textColorHint="@color/gold_70"
                    android:textColor="@color/gold"
                    android:textSize="@dimen/txsize_small_xx" />
             </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="30dp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>