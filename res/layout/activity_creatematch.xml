<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@anim/pingpu"
    android:orientation="vertical"
    >
   
    <RelativeLayout
        
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@anim/title_pingpu" >

        <Button
            android:id="@+id/k_build"
             android:layout_width="80dp"
            android:layout_height="47dp" 
            android:layout_alignParentRight="true"
            android:layout_marginRight="-10dp"
            android:background="@drawable/button_bg_pingpu"
            android:onClick="onclick"
            android:text="@string/new_build"
            android:textColor="@color/gold"
            android:visibility="gone"
            android:textSize="@dimen/txsize_small_xx" />

         <FrameLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
        

        <Button
            android:id="@+id/create_fanhui"
            android:layout_width="80dp"
            android:layout_height="47dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/title_button_left"
            android:background="@drawable/button_bg_pingpu"
            android:text="@string/back"
            android:textColor="@color/gold"
            android:textSize="@dimen/txsize_small_xx" 
            
             />
        
        <ImageView
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:layout_marginTop="6dp"
            android:src="@drawable/back_image" />
		</FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="47dp"
            android:gravity="center"        
            android:layout_centerHorizontal="true"
            android:text="比赛"
            android:textColor="@color/gold"
            android:textSize="@dimen/txsize_mid_x" />
    </RelativeLayout>

   <RelativeLayout
       android:id="@+id/creatematch_select_diamond"
       android:layout_width="match_parent"
       android:layout_height="60dp"
       android:layout_marginBottom="10dp"
       android:orientation="horizontal" >

       <ImageView
           android:id="@+id/dingwei"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:src="@drawable/address_image" />

       <ImageView
           android:id="@+id/onclickimage"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentRight="true"
           android:src="@drawable/choose_pitch" />

       <TextView
           android:id="@+id/qiuchang_name"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="5dp"
           android:layout_marginLeft="45dp"
           android:ellipsize="end"
           android:maxEms="13"
           android:singleLine="true"
           android:text="@string/pith_name"
           android:textColor="@color/gold"
           android:textSize="@dimen/txsize_small_xx" />

   </RelativeLayout>
   
   <View 
       android:layout_width="match_parent"
       android:layout_height="1dp"
       android:background="@color/gold_half"
       />
   
   
   <RelativeLayout
	    android:id="@+id/jifenfangshi"
	    android:layout_width="match_parent"
	    android:layout_height="50dp"
	    android:gravity="center_vertical"
 >

	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="记分方式"
	        android:textColor="@color/gold"
	        android:textSize="@dimen/txsize_small_xx"
	         />
            <TextView
            android:id="@+id/creatematch_fangshi"
            android:layout_marginLeft="260dp"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	         android:textColor="@color/gold"
	         android:textSize="@dimen/txsize_small_xx"
	        android:text="简单" />
	    <ImageView
	        android:id="@+id/imageView1"
	        android:layout_width="@dimen/view_small_xx"
	        android:layout_height="@dimen/view_small_xx"
	        android:layout_alignParentRight="true"
	        android:layout_alignTop="@+id/information_brithday"
	        android:layout_marginLeft="5dp"
	        android:src="@drawable/image_icon_up" />
	</RelativeLayout>
    
       <View 
       android:layout_width="match_parent"
       android:layout_height="1dp"
       android:background="@color/gold_half"
       />
	
	<RelativeLayout
	    android:id="@+id/leixing_layout"
	    android:layout_width="match_parent"
	    android:layout_height="45dp"
	  >

	    <TextView
	        android:id="@+id/easy"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_centerVertical="true"
	        android:layout_marginLeft="22dp"
	        android:text="简单"
	        android:textColor="#c9ad65"
	        android:textSize="@dimen/txsize_small_a" />
	    
	    </RelativeLayout>
	    <View 
	   android:id="@+id/v1"
       android:layout_width="match_parent"
       android:layout_height="1dp"
       android:background="@color/gold_half"
       />
	    
	    <RelativeLayout
	    android:id="@+id/creatematch_major"
	    android:layout_width="match_parent"
	    android:layout_height="45dp"
	  >
	    
	      <TextView
	      android:id="@+id/major"
	      android:layout_width="wrap_content"
	      android:layout_height="wrap_content"
	      android:layout_alignParentLeft="true"
	      android:layout_centerVertical="true"
	      android:layout_marginLeft="22dp"
	      android:textColor="#c9ad65"
	      android:textSize="@dimen/txsize_small_a"
	      android:text="专业" />
	
	</RelativeLayout>
	
	<View 	   
	   android:id="@+id/v2"
       android:layout_width="match_parent"
       android:layout_height="1dp"
       android:background="@color/gold_half"
       />
   
   
   <RelativeLayout 
	    android:id="@+id/competition_selection_relative"
	    android:layout_width="match_parent"
	    android:layout_height="50dp"
	    >
	    <TextView 
	       	android:id="@+id/competition_match_zichang"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:textColor="@color/gold"
	        android:textSize="@dimen/txsize_small_xx"
	        android:text="选择子场"
	        />
	    <TextView 
	        android:id="@+id/competition_match_chang"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="250dp"
	        android:layout_centerVertical="true"
	        android:textColor="@color/gold"
	        android:textSize="@dimen/txsize_small_xx"
	        android:text=""
	        />
	    <ImageView 
	        android:layout_width="20dp"
	        android:layout_height="20dp"
	        android:layout_centerVertical="true"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="5dp"
	        android:src="@drawable/yuan"
	        />
	</RelativeLayout>
	<View 	   
       android:layout_width="match_parent"
       android:layout_height="1dp"
       android:background="@color/gold_half"
       />
	
   <RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    >
	    <ListView 
	        android:id="@+id/competition_listview_qiuchang"
	        android:visibility="gone"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:divider="@color/gold_half"
	        android:dividerHeight="1dp"
	        >
	    </ListView>	    
	</RelativeLayout>
	
   
	
	<RelativeLayout 
	    android:id="@+id/competition_selection_t"
	    android:layout_width="match_parent"
	    android:visibility="gone"
	    android:layout_height="50dp"
	    android:layout_marginTop="20dp"
	    >
	    <TextView 
	       	android:id="@+id/competition_match_t"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:textColor="@color/gold"
	        android:textSize="@dimen/txsize_small_xx"
	        android:text="开球T台"
	        />
	    <TextView 
	        android:id="@+id/competition_t_name"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="250dp"
	        android:layout_centerVertical="true"
	        android:textColor="@color/gold"
	        android:textSize="@dimen/txsize_small_xx"
	        android:text=""
	        />
	    <ImageView 
	        android:layout_width="20dp"
	        android:layout_height="20dp"
	        android:layout_centerVertical="true"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="5dp"
	        android:src="@drawable/yuan"
	        />
	</RelativeLayout>
	<View 
	    android:id="@+id/view_2"
       android:layout_width="match_parent"
       android:layout_height="1dp"
       android:background="@color/gold_half"
       />
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    >
	    <ListView 
	        android:id="@+id/competition_listview_t"
	        android:visibility="gone"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:divider="@color/gold_half"
	        android:dividerHeight="1dp"
	        >
	    </ListView>	    
	</RelativeLayout>
	
	
	
	<RelativeLayout 
	    android:id="@+id/competition_selection_relative_2"
	    android:layout_width="match_parent"
	    android:layout_height="50dp"
	    android:visibility="gone"
	    android:layout_marginTop="20dp"
	    >
	    <TextView 
	       	android:id="@+id/competition_match_zichang_2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:textColor="@color/gold"
	        android:textSize="@dimen/txsize_small_xx"
	        android:text="选择子场"
	        />
	    <TextView 
	        android:id="@+id/competition_match_chang_2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="250dp"
	        android:layout_centerVertical="true"
	        android:textColor="@color/gold"
	        android:textSize="@dimen/txsize_small_xx"
	        android:text=""
	        />
	    <ImageView 
	        android:layout_width="20dp"
	        android:layout_height="20dp"
	        android:layout_centerVertical="true"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="5dp"
	        android:src="@drawable/yuan"
	        />
	</RelativeLayout>
	<View 
	    android:id="@+id/view_3"
       android:layout_width="match_parent"
       android:layout_height="1dp"
       android:background="@color/gold_half"
       />
	
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    >
	    <ListView 
	        android:id="@+id/competition_listview_qiuchang_2"
	        android:visibility="gone"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:divider="@color/gold_half"
	        android:dividerHeight="1dp"
	        >
	    </ListView>	    
	</RelativeLayout>
	
	
	<RelativeLayout 
	    android:id="@+id/competition_selection_t_2"
	    android:layout_width="match_parent"
	    android:layout_height="50dp"
	    android:visibility="gone"
	    android:layout_marginTop="20dp"
	    >
	    <TextView 
	       	android:id="@+id/competition_match_t_2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:textColor="@color/gold"
	        android:textSize="@dimen/txsize_small_xx"
	        android:text="开球T台"
	        />
	    <TextView 
	        android:id="@+id/competition_t_name_2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="250dp"
	        android:layout_centerVertical="true"
	        android:textColor="@color/gold"
	        android:textSize="@dimen/txsize_small_xx"
	        android:text=""
	        />
	    <ImageView 
	        android:layout_width="20dp"
	        android:layout_height="20dp"
	        android:layout_centerVertical="true"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="5dp"
	        android:src="@drawable/yuan"
	        />
	</RelativeLayout>
	
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    >
	    <ListView 
	        android:id="@+id/competition_listview_t_2"
	        android:visibility="gone"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:divider="@color/gold_half"
	        android:dividerHeight="1dp"
	        >
	    </ListView>	    
	</RelativeLayout>

	
	
	<RelativeLayout
	    android:id="@+id/jifenfangshi"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	     android:layout_alignParentBottom="true"
	   >
	
	<Button 
	    android:id="@+id/start"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	     android:layout_alignParentBottom="true"
	    android:text="开始"  />
   </RelativeLayout>
</LinearLayout>