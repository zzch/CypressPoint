<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical"
    >
   
    <RelativeLayout
        
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/daohang" >

        <Button
            android:id="@+id/k_build"
             android:layout_width="80dp"
            android:layout_height="47dp" 
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="-10dp"
            android:background="@null"
            android:onClick="onclick"
            android:text="@string/new_build"
            android:textColor="@color/white"
            android:visibility="gone"
            android:textSize="@dimen/txsize_small_xx" />

         <FrameLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            >
        

        <Button
            android:id="@+id/create_fanhui"
            android:layout_width="80dp"
            android:layout_height="47dp"
            android:layout_marginLeft="@dimen/title_button_left"
            android:background="@null"
            android:text="@string/back"
            android:textColor="@color/white"
            android:textSize="@dimen/txsize_small_xx" 
            
             />
        
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/back_image" />
		</FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="47dp"
            android:gravity="center"        
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="创建比赛"
            android:textColor="@color/white"
            android:textSize="@dimen/txsize_mid_x" />
    </RelativeLayout>
    
    <View 
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#1e1c27"
        />

   <RelativeLayout
       android:id="@+id/creatematch_select_diamond"
       android:layout_width="match_parent"
       android:layout_height="60dp"
       android:gravity="center"
       android:background="@color/daohang"
       android:orientation="horizontal" >

       <ImageView
           android:id="@+id/dingwei"
           android:layout_width="@dimen/create_image_view"
           android:layout_height="@dimen/create_image_view"
           android:layout_centerVertical="true"
           android:layout_marginLeft="20dp"
           android:src="@drawable/address_image" />

       <ImageView
           android:id="@+id/onclickimage"
           android:layout_width="@dimen/create_image_view"
           android:layout_height="@dimen/create_image_view"
           android:layout_alignParentRight="true"
           android:layout_marginRight="20dp"
           android:layout_centerVertical="true"
           android:src="@drawable/choose_pitch" />

       <TextView
           android:id="@+id/qiuchang_name"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginLeft="45dp"
           android:ellipsize="end"
           android:maxEms="13"
           android:singleLine="true"
           android:layout_centerVertical="true"
           android:text=""
           android:textColor="@color/white"
           android:textSize="@dimen/txsize_small_xx" />

   </RelativeLayout>
   
   <View 
       android:layout_width="match_parent"
       android:layout_height="0.5dp"
       android:background="@color/fengexian"
       />
   
   
   <RelativeLayout
	    android:id="@+id/jifenfangshi"
	    android:layout_width="match_parent"
	    android:layout_height="50dp"
	    android:gravity="center_vertical"
 >

	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="记分方式"
	        android:textColor="@color/hei2"
	        android:layout_marginTop="5dp"
	        android:layout_marginLeft="@dimen/view_Layout_x"
	        android:textSize="@dimen/txsize_small_xx"
	         />
            <TextView
            android:id="@+id/creatematch_fangshi"
            android:layout_marginRight="40dp"
            android:layout_alignParentRight="true"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="5dp"
	        android:textColor="@color/chengse"
	        android:textSize="@dimen/txsize_small_xx"
	        android:text="简单" />

	    <ImageView
	        android:id="@+id/imageView1"
	        android:layout_width="@dimen/view_small_xx"
	        android:layout_height="@dimen/view_small_xx"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="@dimen/view_Layout_x"
	        android:layout_marginTop="5dp"
	        android:src="@drawable/image_up" />

	</RelativeLayout>
    
       <View 
       android:layout_width="match_parent"
       android:layout_height="0.5dp"
       android:background="@color/fengexian"
     
       />
	
	<RelativeLayout
	    android:id="@+id/leixing_layout"
	    android:layout_width="match_parent"
	    android:layout_height="45dp"
	  >

	    <TextView
	        android:id="@+id/easy"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_centerVertical="true"
	        android:layout_marginLeft="@dimen/view_sss_ff"
	        android:text="简单"
	        android:textColor="@color/hei5"
	        android:textSize="@dimen/txsize_small_a" />
	    
	    </RelativeLayout>
	    <View 
	   android:id="@+id/v1"
       android:layout_width="match_parent"
       android:layout_height="0.5dp"
       android:layout_marginLeft="10dp"
       android:background="@color/fengexian"
       />
	    
	    <RelativeLayout
	    android:id="@+id/creatematch_major"
	    android:layout_width="match_parent"
	    android:layout_height="45dp"
	  >
	    
	      <TextView
	      android:id="@+id/major"
	      android:layout_width="wrap_content"
	      android:layout_height="wrap_content"
	      android:layout_alignParentLeft="true"
	      android:layout_centerVertical="true"
	      android:layout_marginLeft="@dimen/view_sss_ff"
	     
	      android:textColor="@color/hei5"
	      android:textSize="@dimen/txsize_small_a"
	      android:text="专业" />
	
	</RelativeLayout>
	
	<View 	   
	   android:id="@+id/v2"
       android:layout_width="match_parent"
       android:layout_height="0.5dp"
       android:background="@color/fengexian"
       />
   
   
   <RelativeLayout 
	    android:id="@+id/competition_selection_relative"
	    android:layout_width="match_parent"
	    android:layout_height="50dp"
	    >
	    <TextView 
	       	android:id="@+id/competition_match_zichang"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:textColor="@color/hei2"
	        android:textSize="@dimen/txsize_small_xx"
	         android:layout_marginLeft="@dimen/view_Layout_x"
	        android:text="选择球场"
	        />
	    <TextView 
	        android:id="@+id/competition_match_chang"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginRight="40dp"
            android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"
	        android:textColor="@color/chengse"
	        android:textSize="@dimen/txsize_small_xx"
	        android:text=""
	        />
	     <ImageView
	        android:id="@+id/imageView2"
	        android:layout_width="@dimen/view_small_xx"
	        android:layout_height="@dimen/view_small_xx"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="@dimen/view_Layout_x"
	        android:layout_centerVertical="true"
	        android:src="@drawable/image_up" />
	</RelativeLayout>
	<View 	   
       android:layout_width="match_parent"
       android:layout_height="0.5dp"
       android:background="@color/fengexian"
       />
	
   <RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    >
	    <ListView 
	        android:id="@+id/competition_listview_qiuchang"
	        android:visibility="gone"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:divider="@color/fengexian"
	        android:listSelector="@android:color/transparent"
	        android:dividerHeight="0.5dp"
	        >
	    </ListView>	    
	</RelativeLayout>
	
   
	
	<RelativeLayout 
	    android:id="@+id/competition_selection_t"
	    android:layout_width="match_parent"
	    android:visibility="gone"
	    android:layout_height="50dp"
	    >
	    <TextView 
	       	android:id="@+id/competition_match_t"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:textColor="@color/hei2"
	        android:textSize="@dimen/txsize_small_xx"
	         android:layout_marginLeft="@dimen/view_Layout_x"
	        android:text="发球台"
	        />
	    <TextView 
	        android:id="@+id/competition_t_name"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginRight="40dp"
            android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"
	        android:textColor="@color/chengse"
	        android:textSize="@dimen/txsize_small_xx"
	        android:text=""
	        />
	    <ImageView 
	        android:id="@+id/titaicolor_1"
	        android:layout_width="20dp"
	        android:layout_height="20dp"
	        android:layout_centerVertical="true"
	         android:layout_marginLeft="@dimen/create_pitch_left"
	        />
	    <ImageView
	        android:id="@+id/imageView3"
	        android:layout_width="@dimen/view_small_xx"
	        android:layout_height="@dimen/view_small_xx"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="@dimen/view_Layout_x"
	        android:layout_centerVertical="true"
	        android:src="@drawable/image_up" />
	</RelativeLayout>
	<View 
	    android:id="@+id/view_2"
       android:layout_width="match_parent"
       android:layout_height="0.5dp"
       android:background="@color/fengexian"
       />
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    >
	    <ListView 
	        android:id="@+id/competition_listview_t"
	        android:visibility="gone"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:divider="@color/fengexian"
	        android:listSelector="@android:color/transparent"
	        android:dividerHeight="0.5dp"
	        >
	    </ListView>	    
	</RelativeLayout>
	
	
	
	<RelativeLayout 
	    android:id="@+id/competition_selection_relative_2"
	    android:layout_width="match_parent"
	    android:layout_height="50dp"
	  android:visibility="gone"
	    >
	    <TextView 
	       	android:id="@+id/competition_match_zichang_2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:textColor="@color/hei2"
	        android:textSize="@dimen/txsize_small_xx"
	         android:layout_marginLeft="@dimen/view_Layout_x"
	        android:text="选择球场"
	        />
	    <TextView 
	        android:id="@+id/competition_match_chang_2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginRight="40dp"
            android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"
	        android:textColor="@color/chengse"
	        android:textSize="@dimen/txsize_small_xx"
	        android:text=""
	        />
	    <ImageView
	        android:id="@+id/imageView4"
	        android:layout_width="@dimen/view_small_xx"
	        android:layout_height="@dimen/view_small_xx"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="@dimen/view_Layout_x"
	        android:layout_centerVertical="true"
	        android:src="@drawable/image_up" />
	</RelativeLayout>
	<View 
	    android:id="@+id/view_3"
       android:layout_width="match_parent"
       android:layout_height="0.5dp"
       android:background="@color/fengexian"
       />
	
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    >
	    <ListView 
	        android:id="@+id/competition_listview_qiuchang_2"
	        android:visibility="gone"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:divider="@color/fengexian"
	        android:listSelector="@android:color/transparent"
	        android:dividerHeight="0.5dp"
	        >
	    </ListView>	    
	</RelativeLayout>
	
	
	<RelativeLayout 
	    android:id="@+id/competition_selection_t_2"
	    android:layout_width="match_parent"
	    android:layout_height="50dp"
	     
	    >
	    <TextView 
	       	android:id="@+id/competition_match_t_2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:textColor="@color/hei2"
	        android:textSize="@dimen/txsize_small_xx"
	         android:layout_marginLeft="@dimen/view_Layout_x"
	        android:text="发球台"
	        />
	    <TextView 
	        android:id="@+id/competition_t_name_2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginRight="40dp"
            android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"
	        android:textColor="@color/chengse"
	        android:textSize="@dimen/txsize_small_xx"
	        android:text=""
	        />
	    <ImageView 
	        android:id="@+id/titaicolor_2"
	        android:layout_width="20dp"
	        android:layout_height="20dp"
	        android:layout_centerVertical="true"
	        android:layout_marginLeft="@dimen/create_pitch_left"
	       
	        />
	    
	     <ImageView
	        android:id="@+id/imageView5"
	        android:layout_width="@dimen/view_small_xx"
	        android:layout_height="@dimen/view_small_xx"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="@dimen/view_Layout_x"
	        android:layout_centerVertical="true"
	        android:src="@drawable/image_up" />
	</RelativeLayout>
	
	<View 
	    android:id="@+id/view_4"
       android:layout_width="match_parent"
       android:layout_height="0.5dp"
       android:background="@color/fengexian"
       />
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    >
	    <ListView 
	        android:id="@+id/competition_listview_t_2"
	        android:visibility="gone"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:divider="@color/fengexian"
	        android:listSelector="@android:color/transparent"
	        android:dividerHeight="0.5dp"
	        >
	    </ListView>	    
	</RelativeLayout>

	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" >

	<Button
	    android:id="@+id/start"
	    android:layout_width="match_parent"
	    android:layout_height="50dp"
	    android:layout_alignParentBottom="true"
	    android:gravity="center"
	    android:background="#64af66"
	    android:textColor="@color/bg" 
	    android:textSize="@dimen/txsize_small_xxx"
	    android:text="开始"/>

   </RelativeLayout>
</LinearLayout>