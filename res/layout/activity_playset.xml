<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:id="@+id/linear"
    android:background="@anim/pingpu"
    >
   
     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="50dp"
         android:background="@anim/title_pingpu" >

         <Button
             android:id="@+id/playset_start"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_centerVertical="true"
             android:layout_alignParentRight="true"
             android:background="@null"
             android:text="@string/start"
             android:textColor="@color/gold_half"
             android:textSize="@dimen/txsize_small_xx" />

         <TextView
             android:id="@+id/textView1"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_centerHorizontal="true"
             android:layout_centerVertical="true"
             android:gravity="center"
             android:text="@string/playset"
             android:textColor="@color/gold"
             android:textSize="22dp" />

         <Button
             android:id="@+id/playset_back"
             android:layout_width="50dp"
             android:layout_height="25dp"
             android:layout_alignBaseline="@+id/textView1"
             android:layout_alignBottom="@+id/textView1"
             android:layout_alignParentLeft="true"
             android:background="@drawable/back_button" />
     </RelativeLayout>
     
      <ListView
        android:id="@+id/listView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="#00000000" >
    </ListView>

  <ListView
      android:id="@+id/listView2"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:visibility="gone"
      android:divider="#00000000" >

    </ListView>
   
</LinearLayout>
