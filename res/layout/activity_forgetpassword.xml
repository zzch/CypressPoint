<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:gravity="center_horizontal"
   >
   
   <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_mid_xx_title"
        android:background="@drawable/e_daohang_01" >
        
         <Button 
           android:layout_width="@dimen/view_mid_xx"
           android:layout_height="@dimen/view_mid_x"
           android:layout_alignParentLeft="true"
           android:layout_centerVertical="true"
           android:background="@drawable/bg"
           android:onClick="forgetp_back"
             />
         <TextView 
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="忘记密码"
           android:layout_centerHorizontal="true"
           android:layout_marginTop="10dp"
            android:textColor="@color/gold"
            android:textSize="@dimen/txsize_mid_x"
             />
         
     </RelativeLayout>
     <!-- 输入手机号码 -->
      
<LinearLayout 
    android:id="@+id/forget_layout_one"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:layout_marginTop="70dip"
    android:gravity="center_horizontal"
    
    >
      <TextView 
           android:id="@+id/register"
           android:layout_width="250dip"
           android:layout_height="wrap_content"
           android:hint="输入您的注册时使用的手机号码"
          
             />
       <LinearLayout 
           android:layout_width="260dip"
           android:layout_height="40dip"
           android:orientation="horizontal"
           android:background="@null"
           android:gravity="center_vertical"
      
      >
           <EditText 
           android:id="@+id/et_mobile"
           android:layout_width="150dip"
           android:layout_height="wrap_content"
           android:hint="请输入手机号"
             />
     </LinearLayout>
  </LinearLayout>
  
 <!-- 重置密码 -->
       <LinearLayout 
           android:id="@+id/forget_layout_two"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical" 
           android:layout_marginTop="40dip"
           android:gravity="center_horizontal"
          android:visibility="gone"
          >
     <LinearLayout 
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
         
         >
        <TextView 
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="您的手机号是"
         android:layout_marginLeft="30dip"
            />
        <TextView 
         android:id="@+id/forget_mobile"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="15313469362"
         
            />
    </LinearLayout>
    
     <LinearLayout 
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:layout_marginTop="20dip"
         >
        <EditText 
         android:layout_width="120dip"
         android:layout_height="wrap_content"
         android:hint="请输入验证码"
         android:layout_marginLeft="30dip"
         android:background="@null"
            />
        <Button 
         android:id="@+id/forget_mobile"
         android:layout_width="120dip"
         android:layout_height="wrap_content"
         android:text="发送验证码"
         android:layout_marginLeft="20dip"
            />
    </LinearLayout>
    
       <LinearLayout 
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:layout_marginTop="20dip"
         >
          <EditText 
         android:layout_width="260dip"
         android:layout_height="wrap_content"
         android:hint="请重设密码（至少6位密码）"
         android:background="@null"
       android:layout_marginLeft="30dip"
            />
     </LinearLayout>
   </LinearLayout>
   
      
         <Button 
             android:layout_width="260dip"
             android:layout_height="40dip"
             android:text="提交"
             android:gravity="center_horizontal"
             android:layout_marginTop="30dip"
             android:onClick="on_submit"
          />  
</LinearLayout>