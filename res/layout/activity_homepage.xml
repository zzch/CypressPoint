<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg" 
        >

        <ImageView
            android:layout_width="360dp"
            android:layout_height="209dp"
            android:src="@drawable/shoye_image" />

        
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        android:orientation="vertical"
        >

        <Button
            android:id="@+id/homepage_match"
            android:layout_width="match_parent"
            android:layout_height="135dp"
            android:background="#e74c3c"
            android:onClick="onClick"
            android:text="竞  技  比  赛"
            android:textColor="@color/white"
            android:textSize="21dp"
            />
        <View 
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/white"
            />
           <Button
            android:id="@+id/homepage_statistics"
            android:layout_width="match_parent"
            android:layout_height="135dp"
            android:background="#3498db"
            android:onClick="onClick"
            android:text="技  术  统  计"
            android:textColor="@color/white"
            android:textSize="21dp"
            />
            <View 
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/white"
            />
           <Button
            android:id="@+id/homepage_personal_center"
            android:layout_width="match_parent"
            android:layout_height="135dp"
            android:background="#e67e22"
            android:onClick="onClick"
            android:text="个  人  中  心"
            android:textColor="@color/white"
            android:textSize="21dp"
            />

        
    </LinearLayout>

</LinearLayout>