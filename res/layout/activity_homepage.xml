<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:background="@color/bg" >

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:src="@drawable/login" />

        <ImageView
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="150dp"
            android:src="@drawable/igolf"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        android:orientation="vertical"
        >

        <Button
            android:id="@+id/homepage_match"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00c27b"
            android:onClick="onClick"
            android:text="竞技比赛"
            android:textColor="@color/hei2"
            android:textSize="@dimen/txsize_small_xxx"
            android:layout_weight="1"/>
           <Button
            android:id="@+id/homepage_statistics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#48accc"
            android:onClick="onClick"
            android:text="技术统计"
            android:textColor="@color/hei2"
            android:textSize="@dimen/txsize_small_xxx"
            android:layout_weight="1"/>
           <Button
            android:id="@+id/homepage_personal_center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#e29f40"
            android:onClick="onClick"
            android:text="个人中心"
            android:textColor="@color/hei2"
            android:textSize="@dimen/txsize_small_xxx"
            android:layout_weight="1"/>

        
    </LinearLayout>

</LinearLayout>