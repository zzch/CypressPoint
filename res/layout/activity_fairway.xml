<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
	<RelativeLayout 
       android:layout_width="match_parent"
       android:layout_height="50dp"
       android:background="@anim/title_pingpu"
         >
         <Button 
             android:id="@+id/scorecard_fairway_back"
             android:layout_width="50dp"
             android:layout_height="25dp"
             android:layout_alignParentLeft="true"
             android:layout_centerVertical="true"
             android:background="@drawable/back_button"
             android:layout_marginLeft="10dp"
             android:onClick="onclick"
           />
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_centerHorizontal="true"
             android:layout_centerVertical="true"
             android:gravity="center"
             android:text="推杆"
             android:textColor="@color/gold"
             android:textSize="@dimen/txsize_mid_x" />
           
     </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ListView
            android:id="@+id/major_fairway_qiudong"
            android:layout_width="150dp"
            android:layout_height="300dp" >
        </ListView>

        <ImageView
            android:id="@+id/major_fairway_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/e_card_yuan" />
    </RelativeLayout>

    <ListView
        android:id="@+id/major_fairway_shuju"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </ListView>

</LinearLayout>