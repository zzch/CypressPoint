<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:gravity="center_horizontal"
   >
   
  <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="@dimen/view_mid_xx_title"
    android:orientation="horizontal"
    android:gravity="center_horizontal"
    >
          <TextView 
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="注册"
           android:gravity="center"
           android:textSize="25sp"
             />
           
  </LinearLayout>
    
     <LinearLayout 
      android:layout_width="300dp"
      android:layout_height="40dip"
      android:orientation="horizontal"
      android:background="@null"
      android:gravity="center_vertical"
       android:layout_marginTop="50dip"
      >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户名："
            />
            
           <EditText 
           android:id="@+id/et_mobile_reg"
           android:layout_width="150dip"
           android:layout_height="wrap_content"
           android:hint="请输入手机号"
          
             />
  </LinearLayout>
  
      <LinearLayout 
      android:layout_width="300dip"
      android:layout_height="40dip"
      android:orientation="horizontal"
      android:background="@null"
       android:gravity="center_vertical"
       android:layout_marginTop="25dip"
      >
           <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密    码："
               />
          
           <EditText 
           android:id="@+id/et_password_reg"
           android:layout_width="150dip"
           android:layout_height="wrap_content"
            android:password="true"
           android:hint="至少6位密码"
             />
           
  </LinearLayout>
  
      
       <LinearLayout 
      android:layout_width="300dip"
      android:layout_height="40dip"
      android:orientation="horizontal"
      android:background="@null"
       android:gravity="center_vertical"
       android:layout_marginTop="25dip"
      >
           <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认密码："
               />
          
           <EditText 
           android:id="@+id/et_confirm_password"
           android:layout_width="150dip"
           android:layout_height="wrap_content"
            android:password="true"
           android:hint="请确认您的密码"
             />
           
  </LinearLayout>
      
  
       <LinearLayout 
      android:layout_width="300dip"
      android:layout_height="40dip"
      android:orientation="horizontal"
      android:background="@null"
     android:gravity="center_vertical"
       android:layout_marginTop="25dip"
      >
          <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="验证码"
            />
           <EditText 
           android:id="@+id/et_yanzhengma_reg"
           android:layout_width="150dip"
           android:layout_height="wrap_content"
           android:hint="验证码"
             />
  
       
  </LinearLayout>
  
         <Button 
             android:id="@+id/but_getyanzhengma"
           android:layout_width="300dp"
           android:layout_height="40dip"
           android:text="获取验证码"
           android:layout_marginTop="30dip"
          android:gravity="center_horizontal"
           android:onClick="on_yanzhengma"
          />
         
         
         <Button 
           android:id="@+id/but_zhuce"
           android:layout_width="300dp"
           android:layout_height="40dip"
           android:text="注册"
           android:layout_marginTop="80dip"
          android:gravity="center_horizontal"
           android:onClick="on_but_zhuce"
          />
</LinearLayout>