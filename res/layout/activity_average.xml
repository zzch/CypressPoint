<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
	<RelativeLayout 
       android:layout_width="match_parent"
       android:layout_height="50dp"
       android:background="@anim/title_pingpu"
         >
         <Button 
             android:id="@+id/scorecard_average_back"
             android:layout_width="50dp"
             android:layout_height="25dp"
             android:layout_alignParentLeft="true"
             android:layout_centerVertical="true"
             android:background="@drawable/back_button"
             android:layout_marginLeft="10dp"
           />
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_centerHorizontal="true"
             android:layout_centerVertical="true"
             android:gravity="center"
             android:text="平均杆数"
             android:textColor="@color/gold"
             android:textSize="@dimen/txsize_mid_x" />
           
     </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ListView
            android:id="@+id/major_average_qiudong"
            android:layout_width="150dp"
            android:listSelector="@android:color/transparent"  
            android:layout_height="wrap_content" >
        </ListView>

        <ImageView
            android:id="@+id/major_average_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/yuan" />
    </RelativeLayout>
	<RelativeLayout 
	    android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"	    
	    >
	    <TextView 
	        android:id="@+id/avaerage_shuju_scrambles"
	        android:layout_marginTop="20dp"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="30dp"
	        android:text="0"
	        />
	    <TextView 
	        android:id="@+id/avaerage_shuju_percentage"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="50dp"
	        android:text="0%"
	        />
	    <ImageView 
	        android:id="@+id/average_shuju_image"
	        android:layout_marginLeft="20dp"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@android:drawable/alert_dark_frame"
	        />
	    <TextView 
	        android:id="@+id/avaerage_shuju"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="15dp"
	        android:layout_marginLeft="70dp"
	        android:text="救平标准杆率 0/18(0%) "
	        />
	</RelativeLayout>
    

</LinearLayout>