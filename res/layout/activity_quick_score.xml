<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@anim/pingpu"
     >

     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="@dimen/view_mid_xx_title"
         android:background="@anim/title_pingpu" >
	
         <TextView
             android:id="@+id/textView1"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_centerHorizontal="true"
             android:layout_centerVertical="true"
             android:gravity="center"
             android:text="@string/easy_card"
             android:textColor="@color/gold"
             android:textSize="@dimen/txsize_small_xxx" />

         <Button
             android:id="@+id/k_build"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentRight="true"
             android:background="@null"
             android:onClick="onclick"
             android:layout_centerVertical="true"
             android:text="@string/new_build"
             android:textColor="@color/gold" 
             android:textSize="@dimen/txsize_small_xx"
             />

         <Button
             android:id="@+id/k_back"
             android:layout_width="50dp"
             android:layout_height="25dp"
             android:layout_alignParentLeft="true"
             android:layout_centerVertical="true"
             android:layout_marginLeft="10dp"
             android:background="@drawable/back_button"
             android:onClick="onclick" />

     </RelativeLayout>
   
    
     <cn.com.zcty.ILovegolf.tools.XListView
        android:id="@+id/xListView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:divider="@null"
        
      >
        </cn.com.zcty.ILovegolf.tools.XListView>
      
          <ImageView 
	       android:id="@+id/tishi"
           android:layout_width="300dp"
           android:layout_height="90dp"
           android:layout_marginTop="10dp" 
           android:layout_gravity="center_horizontal"
           android:src="@drawable/quick_text_gone"
         /> 
</LinearLayout>















