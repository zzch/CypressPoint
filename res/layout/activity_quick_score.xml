<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@anim/pingpu"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@anim/title_pingpu" >

        <Button
            android:id="@+id/k_build"
            android:layout_width="80dp"
            android:layout_height="47dp"
            android:layout_alignBottom="@+id/imageView1"
            android:layout_alignParentRight="true"
            android:layout_marginRight="-10dp"
            android:background="@drawable/button_bg_pingpu"
            android:onClick="onclick"
            android:text="@string/new_build"
            android:textColor="@color/gold"
            android:textSize="@dimen/txsize_small_xx" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/k_back"
                android:layout_width="80dp"
                android:layout_height="47dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/title_button_left"
                android:background="@drawable/button_bg_pingpu"
                android:onClick="onclick"
                android:text="@string/back"
                android:textColor="@color/gold"
                android:textSize="@dimen/txsize_small_xx" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:layout_marginTop="6dp"
                android:src="@drawable/back_image" />
        </FrameLayout>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="47dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="简单记分卡"
            android:textColor="@color/gold"
            android:textSize="@dimen/txsize_mid_x" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical" >

        <Button
            android:id="@+id/create_match"
            android:layout_width="@dimen/view_tongyong"
            android:layout_height="@dimen/view_sss_e"
            android:background="@drawable/button"
            android:onClick="onclick"
            android:text="创建新比赛"
            android:textColor="@color/gold"
            android:textSize="@dimen/txsize_mid_x" />

        <Button
            android:id="@+id/add_match"
            android:layout_width="@dimen/view_tongyong"
            android:layout_height="@dimen/view_sss_e"
            android:background="@drawable/button"
            android:gravity="center"
            android:onClick="onclick"
            android:text="加入比赛"
            android:textColor="@color/gold"
            android:textSize="@dimen/txsize_mid_x" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <com.handmark.pulltorefresh.library.PullToRefreshScrollView
            xmlns:ptr="http://schemas.android.com/apk/res-auto"
            android:id="@+id/pull_refresh_scrollview"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            ptr:ptrAnimationStyle="flip"
            ptr:ptrMode="both" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <ListView
                    android:id="@+id/listview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@null"
                    android:listSelector="@android:color/transparent"
                     />
            </RelativeLayout>
        </com.handmark.pulltorefresh.library.PullToRefreshScrollView>
    </LinearLayout>

    <ImageView
        android:id="@+id/tishi"
        android:layout_width="@dimen/view_tongyong"
        android:layout_height="90dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:src="@drawable/quick_text_gone" />

</LinearLayout>