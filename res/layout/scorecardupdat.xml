<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/black"
   >
   <RelativeLayout 
       android:layout_width="match_parent"
       android:layout_height="@dimen/view_mid_xx_title"
       android:background="@drawable/e_daohang_01"
         >
         <TextView 
             android:id="@+id/ball_hole"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_centerHorizontal="true"
             android:layout_centerVertical="true"
             android:gravity="center"
             android:textColor="@color/white"
             android:textSize="@dimen/txsize_mid_x"
             />
           <Button 
           android:id="@+id/scorecard_save"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentBottom="true"
           android:layout_alignParentRight="true"
           android:background="@null"
           android:textSize="@dimen/txsize_small_xx"
           android:textColor="@color/white"
           android:text="@string/button_save"
           android:onClick="onClick"
             />

           <Button
               android:id="@+id/scorecard_cancel"
               android:layout_width="@dimen/view_mid_xx"
               android:layout_height="@dimen/view_mid_x"
               android:layout_alignParentLeft="true"
               android:layout_centerVertical="true"
               android:background="@drawable/back_button" />
     </RelativeLayout>
     
   
   
   
   <LinearLayout 
       android:layout_width="match_parent"
       android:layout_height="@dimen/view_mid_xx_xx"
       android:orientation="horizontal"
       android:gravity="center_vertical"
       android:background="@drawable/score_card_item_bg"
       >

     
           
       <LinearLayout 
       android:layout_width="@dimen/view_large_x"
       android:layout_height="@dimen/view_mid_xx_xx"
       android:gravity="center"
       android:background="@drawable/score_card_item_bg"
           >
         <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:gravity="center_vertical"
           android:text="总杆数"
           android:textColor="@color/white"
           android:textSize="@dimen/txsize_small_x" />
       </LinearLayout>
          <View
             android:layout_width="2dip"
             android:layout_height="match_parent"
             android:background="@drawable/line" />
       <Button 
         android:id="@+id/but_jian_one"
         android:layout_width="@dimen/view_small_xxx"
         android:layout_height="@dimen/view_small_xxx"
         android:onClick="onClick"
         android:background="@drawable/e_jian"
         android:layout_marginLeft="@dimen/view_small_xx"
           />
       
        <TextView 
           android:id="@+id/tv_update_one"
           android:layout_width="@dimen/view_mid_x"
           android:layout_height="@dimen/view_mid_x"
           android:textSize="@dimen/txsize_mid_x"
           android:text="6"
           android:textColor="@color/green"
           android:gravity="center"
           android:layout_marginLeft="30dip"
           android:background="@drawable/e_textview_bg"
           /> 
       
         <Button 
           android:id="@+id/but_add_one"
           android:layout_width="@dimen/view_small_xxx"
           android:layout_height="@dimen/view_small_xxx"
           android:onClick="onClick"
           android:background="@drawable/add"
           android:layout_marginLeft="30dip"
           />
   </LinearLayout>
    
   
   

     <LinearLayout 
       android:layout_width="match_parent"
       android:layout_height="@dimen/view_mid_xx_xx"
       android:orientation="horizontal"
       android:gravity="center_vertical"
       android:background="@drawable/score_card_item_bg"
       >
         
          <LinearLayout 
       android:layout_width="@dimen/view_large_x"
       android:layout_height="@dimen/view_mid_xx_xx"
       android:gravity="center"
       android:background="@drawable/score_card_item_bg"
           >
       <TextView 
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="推杆数"
        
         android:textSize="@dimen/txsize_small_x"
         android:textColor="@color/white"
         android:gravity="center_vertical"
           />
       
       </LinearLayout>
          <View
             android:layout_width="2dip"
             android:layout_height="match_parent"
             android:background="@drawable/line" />
       <Button 
           android:id="@+id/but_jian_two"
           android:layout_width="@dimen/view_small_xxx"
           android:layout_height="@dimen/view_small_xxx"
           android:onClick="onClick"
           android:background="@drawable/e_jian"
           android:layout_marginLeft="@dimen/view_small_xx"
           />
       
        <TextView 
            android:id="@+id/tv_update_two"
           android:layout_width="@dimen/view_mid_x"
           android:layout_height="@dimen/view_mid_x"
           android:textSize="@dimen/txsize_mid_x"
           android:text="2"
           android:textColor="@color/green"
           android:gravity="center"
           android:layout_marginLeft="30dip"
           android:background="@drawable/e_textview_bg"
           /> 
       
         <Button 
           android:id="@+id/but_add_two"
           android:layout_width="@dimen/view_small_xxx"
           android:layout_height="@dimen/view_small_xxx"
           android:onClick="onClick"
           android:background="@drawable/add"
           android:layout_marginLeft="30dip"
           />
   </LinearLayout>
    
     
      <LinearLayout 
       android:layout_width="match_parent"
       android:layout_height="@dimen/view_mid_xx_xx"
       android:orientation="horizontal"
       android:gravity="center_vertical"
       android:background="@drawable/score_card_item_bg"
       >
          <LinearLayout 
       android:layout_width="@dimen/view_large_x"
       android:layout_height="@dimen/view_mid_xx_xx"
       android:gravity="center"
       android:background="@drawable/score_card_item_bg"
           >
       <TextView 
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="罚杆数"
         android:textSize="@dimen/txsize_small_x"
         android:textColor="@color/white"
         android:gravity="center_vertical"
           />
       
       </LinearLayout>
          <View
             android:layout_width="2dip"
             android:layout_height="match_parent"
             android:background="@drawable/line" />
       <Button 
           android:id="@+id/but_jian_three"
           android:layout_width="@dimen/view_small_xxx"
           android:layout_height="@dimen/view_small_xxx"
           android:onClick="onClick"
           android:background="@drawable/e_jian"
           android:layout_marginLeft="@dimen/view_small_xx"
           />
       
        <TextView 
           android:id="@+id/tv_update_three"
           android:layout_width="@dimen/view_mid_x"
           android:layout_height="@dimen/view_mid_x"
           android:textSize="@dimen/txsize_mid_x"
           android:text="2"
           android:textColor="@color/green"
           android:gravity="center"
           android:layout_marginLeft="30dip"
           android:background="@drawable/e_textview_bg"
           /> 
       
         <Button 
           android:id="@+id/but_add_three"
           android:layout_width="@dimen/view_small_xxx"
           android:layout_height="@dimen/view_small_xxx"
           android:onClick="onClick"
           android:background="@drawable/add"
           android:layout_marginLeft="30dip"
           />
   </LinearLayout> 
      
     
 
     <LinearLayout 
       android:id="@+id/layout_chooise"
       android:layout_width="match_parent"
       android:layout_height="@dimen/view_mid_xx_x"
       android:orientation="horizontal"
       android:gravity="center"
       android:onClick="onClick"
       android:background="@drawable/scorecard_layout_bg"
       
       >
       <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/view_small_xx"
        android:gravity="center"
           >
           <TextView 
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="开球距离"
          android:textSize="@dimen/txsize_small_xx"
          android:textColor="@color/white"
          
          />
          <TextView 
          android:id="@+id/distance_scorecard"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text=""
          android:textSize="@dimen/txsize_small_x"
          android:textColor="@color/green"
         
          />
           
       </LinearLayout>
       
       <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginLeft="@dimen/view_mid_xxx"
        >
      
       <TextView 
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="开球命中"
          android:textSize="@dimen/txsize_small_xx"
          android:textColor="@color/white"
          
          />
       
        <TextView 
          android:id="@+id/hit_scorecard"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text=""
          android:textSize="@dimen/txsize_small_x"
          android:textColor="@color/green"
          />
         </LinearLayout>
      
       <ImageView 
           android:id="@+id/scorecard_image_up"
           android:layout_width="@dimen/view_small_xx"
           android:layout_height="@dimen/view_small_xx"
           android:src="@drawable/image_down"
           android:layout_gravity="center_vertical"
           android:layout_marginLeft="@dimen/view_small_x"
           android:layout_marginBottom="8dp"
           />
      </LinearLayout>
      
      
       <LinearLayout
       
       android:layout_gravity="center_horizontal"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="@dimen/view_mid_x"
       
		>
	
      <cn.com.zcty.ILovegolf.tools.WheelView 
		    android:id="@+id/passw_1"
		    android:layout_weight="1"
			android:layout_height="@dimen/view_large_xx"
			android:layout_width="wrap_content"
			
			/>
		<cn.com.zcty.ILovegolf.tools.WheelView 
		     android:id="@+id/passw_2"
			android:layout_height="@dimen/view_large_xx"
			android:layout_width="wrap_content"
			android:layout_weight="1"/>
		
	</LinearLayout> 
     
    
    
</LinearLayout>
