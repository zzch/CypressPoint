<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@anim/pingpu"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@anim/title_pingpu" >

        <Button
            android:id="@+id/analyze_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="13dp"
            android:background="@null"
            android:text="@string/count_next"
            android:textColor="@color/gold"
            android:textSize="@dimen/txsize_small_xx" />


        <TextView
            android:id="@+id/analyze_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/playset"
            android:layout_marginTop="10dp"
            android:textColor="@color/gold"
            android:textSize="@dimen/txsize_mid_x" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="7dp"
            android:src="@drawable/back_image" />


        <Button
            android:id="@+id/analyze_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:background="@null"
            android:text="返回"
            android:textColor="#ffffff"
            android:textSize="@dimen/txsize_small_xx" />
    </RelativeLayout>

    <RadioGroup
        android:id="@+id/analyze_radio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/analyze_bisai"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/radio_group_selector"
            android:button="@null"
            android:text="按比赛"
            android:gravity="center"
            android:textColor="@drawable/radio_text_selector"
            android:textSize="22dp" />

        <RadioButton
            android:id="@+id/analyze_time"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/radio_group2_selector"
            android:button="@null"
            android:gravity="center"
            android:text="按时间"
            android:textColor="@drawable/radio_text_selector"
            android:textSize="22dp" />

        <RadioButton
            android:id="@+id/analyze_qiuchang"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/radio_group3_selector"
            android:button="@null"
            android:gravity="center"
            android:text="按球场"
            android:textColor="@drawable/radio_text_selector"
            android:textSize="22dp" />
    </RadioGroup>

    <android.support.v4.view.ViewPager
        android:id="@+id/analyze_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </android.support.v4.view.ViewPager>

</LinearLayout>