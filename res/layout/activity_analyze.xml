<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:background="@anim/pingpu"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
         android:layout_height="@dimen/title_height"
        android:background="@anim/title_pingpu" >

        

        <TextView
            android:id="@+id/analyze_title"
             android:layout_width="wrap_content"
           android:layout_height="47dp"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:text="@string/playset"
            android:textColor="@color/gold"
            android:textSize="@dimen/txsize_mid_x"/>

          <FrameLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            
            >
         
        <Button
            android:id="@+id/analyze_back"
            android:layout_width="80dp"
            android:layout_height="47dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/title_button_left"
            android:background="@drawable/button_bg_pingpu"
            android:text="@string/back"
            android:textColor="@color/gold"
            android:textSize="@dimen/txsize_small_xx"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:layout_marginTop="6dp"
            android:src="@drawable/back_image" />
		</FrameLayout>
        
    </RelativeLayout>

    <RadioGroup
        android:id="@+id/analyze_radio"
        android:layout_width="@dimen/radio_group_x"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/analyze_bisai"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/radio_group_xx"
            android:layout_weight="1"
            android:background="@drawable/radio_group_selector"
            android:button="@null"
            android:text="按比赛"
            android:gravity="center"
            android:textColor="@drawable/radio_text_selector"
            android:textSize="22dp" />

        <RadioButton
            android:id="@+id/analyze_time"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/radio_group_xx"
            android:layout_weight="1"
            android:background="@drawable/radio_group2_selector"
            android:button="@null"
            android:gravity="center"
            android:text="按时间"
            android:textColor="@drawable/radio_text_selector"
            android:textSize="22dp" />

        <RadioButton
            android:id="@+id/analyze_qiuchang"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/radio_group_xx"
            android:layout_weight="1"
            android:background="@drawable/radio_group3_selector"
            android:button="@null"
            android:gravity="center"
            android:text="按球场"
            android:textColor="@drawable/radio_text_selector"
            android:textSize="22dp" />
    </RadioGroup>

    <android.support.v4.view.ViewPager
        android:id="@+id/analyze_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </android.support.v4.view.ViewPager>

</LinearLayout>