<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:gravity="center_horizontal"
    android:background="@anim/pingpu"
   >
    <RelativeLayout
        android:layout_width="match_parent"
       android:layout_height="@dimen/title_height"
        android:background="@anim/title_pingpu" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="我爱高尔夫"
            android:textColor="@color/gold"
            android:textSize="@dimen/txsize_mid_x" />

        
    </RelativeLayout>
    
    <Button 
        android:id="@+id/but1"
        android:layout_width="300dp"
        android:layout_height="@dimen/view_mid_xx_title"
        android:text="@string/zhuce"
        android:background="@drawable/button"
        android:gravity="center"
        android:textSize="20dp"
        android:textColor="@color/gold" 
        android:onClick="but_register"
        android:layout_marginTop="@dimen/view_mid_x"
        />
      <Button 
        android:id="@+id/but2"
        android:layout_width="300dp"
        android:layout_height="@dimen/view_mid_xx_title"
        android:text="@string/mobileregister"
        android:background="@drawable/button"
        android:gravity="center"
        android:textColor="@color/gold" 
        android:textSize="20dp"
        android:onClick="but_login"
        android:layout_marginTop="@dimen/view_small_xx_w"
        />
     <LinearLayout 
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical"
          android:gravity="center"
         >
         <TextView 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
            android:textColor="@color/gold"
             android:textSize="@dimen/txsize_mid_x"
             android:text="登录"
             android:layout_marginTop="25dp"
             />
         
         <EditText 
             android:id="@+id/et_username"
             android:layout_width="300dp"
             android:layout_height="@dimen/view_mid_xx_title"
             android:hint=" 请输入手机号"
             android:textColor="@color/gold_half" 
             android:background="@drawable/e_button_pressed"
             android:layout_marginTop="30dp"
             android:textColorHint="@color/gold_half"
             />
          <EditText 
             android:id="@+id/et_password"
             android:layout_width="300dp"
             android:layout_height="@dimen/view_mid_xx_title" 
             android:hint=" 请输入密码"
             android:password="true"
             android:textColor="@color/gold_half"
             android:background="@drawable/e_button_pressed"
             android:layout_marginTop="@dimen/view_small_x"
             android:textColorHint="@color/gold_half"
             />
           <Button 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="忘记密码？"
            android:background="@null"
            android:textColor="@color/gold_half"
            android:layout_marginLeft="90dip"
            android:layout_marginTop="10dip"
            android:onClick="forget_password"
           
            />
     </LinearLayout>
     
       <Button 
        android:id="@+id/but_login"
        android:layout_width="300dp"
        android:layout_height="@dimen/view_mid_xx_title"
        android:text="@string/login"
        android:background="@drawable/button"
        android:gravity="center"
        android:textColor="@color/gold" 
        android:onClick="login"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        />
       
        <LinearLayout 
          android:layout_width="match_parent"
          android:layout_height="50dip"
          android:orientation="horizontal"
          android:layout_marginTop="20dip"
          android:gravity="center_vertical"
          
            >
            <TextView 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="微信"
             android:layout_marginLeft="70dip"
                />
            <TextView 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="微博"
             android:layout_marginLeft="70dip"
                />
            <TextView 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="QQ"
             android:layout_marginLeft="70dip"
                />
        </LinearLayout>

</LinearLayout>
