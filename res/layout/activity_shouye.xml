<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:id="@+id/linear"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/daohang" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="47dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="我爱高尔夫"
            android:textColor="@color/white"
            android:textSize="@dimen/txsize_mid_x" />
    </RelativeLayout>
    <ScrollView 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:focusable="true"
                android:gravity="center_horizontal"
                android:focusableInTouchMode="true"
                >


    <Button
        android:id="@+id/but1"
        android:layout_width="@dimen/register_view_width"
        android:layout_height="@dimen/button_height"
        android:layout_marginTop="@dimen/view_mid_x"
        android:background="@drawable/button"
        android:gravity="center"
        android:onClick="but_register"
        android:text="@string/zhuce"
        android:textColor="@color/bg"
        android:textSize="@dimen/txsize_small_xxx" />

    <Button
        android:id="@+id/but2"
        android:layout_width="@dimen/register_view_width"
        android:layout_height="@dimen/button_height"
        android:layout_marginTop="@dimen/tab_image_x"
        android:background="@drawable/button"
        android:gravity="center"
        android:onClick="but_login"
        android:text="@string/mobileregister"
        android:textColor="@color/bg"
        android:textSize="@dimen/txsize_small_xxx" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="@dimen/shouye_view_top"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <View
                android:layout_width="90dp"
                android:layout_height="1dp"
                android:layout_marginLeft="35dp"
                android:background="@color/hei6" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="登录"
                android:textColor="@color/hei2"
                android:textSize="@dimen/txsize_mid_x" />

            <View
                android:layout_width="90dp"
                android:layout_height="1dp"
                android:layout_marginLeft="30dp"
                android:background="@color/hei6" />
        </LinearLayout>

        <EditText
            android:id="@+id/et_username"
            android:layout_width="@dimen/register_view_width"
            android:layout_height="@dimen/view_mid_xx_title"
            android:layout_marginTop="@dimen/shouye_name_top"
            android:background="@drawable/wenbenkuang"
            android:ellipsize="end"
            android:hint=" 请输入手机号"
            android:lines="1"
            android:textColor="@color/hei5"
            android:singleLine="true" 
            android:textColorHint="@color/hei6" />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="@dimen/register_view_width"
            android:layout_height="@dimen/view_mid_xx_title"
            android:layout_marginTop="@dimen/view_small_xx"
            android:background="@drawable/wenbenkuang"
            android:ellipsize="end"
            android:hint=" 请输入密码"
            android:lines="1"
            android:password="true"
            android:textColor="@color/hei5"
            android:singleLine="true" 
            android:textColorHint="@color/hei6" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/create_score_left"
            android:layout_marginTop="10dp"
            android:background="@null"
            android:onClick="forget_password"
            android:text="忘记密码？"
            android:textColor="@color/hei5" />

        <View
            android:layout_width="70dp"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/create_score_left"
            android:background="@color/fengexian" />
    </LinearLayout>

    <Button
        android:id="@+id/but_login"
        android:layout_width="@dimen/register_view_width"
        android:layout_height="@dimen/button_height"
        android:layout_marginTop="@dimen/view_sss_ccc"
        android:background="@drawable/button"
        android:gravity="center"
        android:onClick="login"
        android:text="@string/login"
        android:textColor="@color/bg"
        android:textSize="20dp" />
        />
       
        <LinearLayout 
          android:layout_width="match_parent"
          android:layout_height="50dp"
          android:orientation="horizontal"
          android:layout_marginTop="@dimen/shouye_login_top"
          android:gravity="center_vertical"
          android:visibility="gone"
            >
            <ImageView 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:src="@drawable/weixin"
             
             android:layout_weight="1"
                />
            <ImageView 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:src="@drawable/weibo"
            
             android:layout_weight="1"
                />
            <ImageView 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:src="@drawable/qq"
           
             android:layout_weight="1"
                />
        </LinearLayout>
        </LinearLayout>
        </RelativeLayout>
        </ScrollView>


      

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/shouye_login_top"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/weixin" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/weibo" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/qq" />
    </LinearLayout>
    

</LinearLayout>

