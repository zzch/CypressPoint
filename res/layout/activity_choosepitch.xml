<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
     >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_mid_xx_title"
        android:background="@drawable/e_daohang_01" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/chooisepith"
            android:textColor="@color/white"
            android:textSize="@dimen/txsize_small_xxx" />

        <Button
            android:id="@+id/button1"
            android:layout_width="@dimen/view_mid_xx"
            android:layout_height="@dimen/view_mid_x"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/back_button"
            android:onClick="choosepith_back" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/button1"
            android:background="@null"
            android:onClick="qiehuan"
            android:text="@string/qiehuan"
            android:textColor="@color/white"
            android:textSize="@dimen/txsize_small_xx" />

    </RelativeLayout>

     <LinearLayout 
          android:id="@+id/layout_listview_one"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical"
         >
      <ListView 
            android:id="@+id/listpich"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fadingEdge="none"
         />
       </LinearLayout>
       
     <LinearLayout 
          android:id="@+id/layout_listview_two"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:visibility="gone"
         >
      <ListView 
            android:id="@+id/searchlistview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
         />
       </LinearLayout>
</LinearLayout>









