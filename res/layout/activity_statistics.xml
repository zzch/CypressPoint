<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@anim/pingpu"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
       android:layout_height="@dimen/title_height"
        android:background="@anim/title_pingpu" >

        <TextView
            android:id="@+id/statistics"
            android:layout_width="wrap_content"
            android:layout_height="47dp"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:text="@string/text_statistics"
            android:textColor="@color/gold"
            android:textSize="@dimen/txsize_mid_x" />

        <Button
            android:id="@+id/share"
            android:layout_width="80dp"
            android:layout_height="47dp" 
            android:layout_alignParentRight="true"
            android:layout_marginRight="-10dp"
            android:background="@drawable/button_bg_pingpu"
            android:text="@string/text_share"
            android:textColor="@color/gold"
            android:textSize="@dimen/txsize_small_xx" />

       <FrameLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

        <Button
            android:id="@+id/back"
            android:layout_width="80dp"
            android:layout_height="47dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/title_button_left"
            android:background="@drawable/button_bg_pingpu"
            android:onClick="onClick"
            android:text="@string/back"
            android:textColor="@color/gold"
            android:textSize="@dimen/txsize_small_xx" />
        
         <ImageView
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:layout_marginTop="6dp"
            android:src="@drawable/back_image" />
		</FrameLayout>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_mid_xx_xx"
                android:gravity="center_vertical" >

                <TextView
                    android:id="@+id/golf_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="北京北湖高尔夫"
                    android:textColor="@color/gold"
                    android:textSize="@dimen/txsize_small_xx" />

                <TextView
                    android:id="@+id/golf_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/golf_name"
                    android:text="2014年6月14日"
                    android:textColor="@color/gold_70"
                    android:textSize="@dimen/txsize_small_x" />

                <RadioGroup
                    android:id="@+id/main_radio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="right"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/mainTabs_radio_qian"
                        android:layout_width="@dimen/view_mid_xx_title"
                        android:layout_height="@dimen/view_image_radio"
                        android:background="@drawable/group_1"
                        android:button="@null"
                        android:gravity="center"
                        android:text="前九"
                        android:textColor="@color/black"
                        android:textSize="@dimen/txsize_small_x" />

                    <RadioButton
                        android:id="@+id/mainTabs_radio_hou"
                        android:layout_width="@dimen/view_mid_xx_title"
                        android:layout_height="@dimen/view_image_radio"
                        android:layout_marginRight="@dimen/view_small_x"
                        android:background="@drawable/group_2"
                        android:button="@null"
                        android:gravity="center"
                        android:text="后九"
                        android:textColor="@color/gold"
                        android:textSize="@dimen/txsize_small_x" />
                </RadioGroup>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/gold_half" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TableRow
                        android:id="@+id/tableRow1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            />

                        <TextView
                            android:layout_width="@dimen/view_sss_aaa"
                            android:layout_height="@dimen/view_sss_bbb"
                            android:layout_margin="0.5dip"
                            android:gravity="center"
                            android:text="洞"
                            android:textColor="@color/gold"
                            android:textSize="@dimen/txsize_small_xxx" />

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            android:background="@color/gold_half" />
                    </TableRow>

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="0.5dp"
                        android:src="@color/gold_half" />

                    <TableRow
                        android:id="@+id/tableRow2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                             />

                        <TextView
                            android:layout_width="wrap_content"
                           android:layout_height="@dimen/view_sss_bbb"
                            android:layout_margin="0.5dip"
                            android:gravity="center"
                            android:text="标准杆"
                            android:textColor="@color/gold"
                            android:textSize="@dimen/txsize_small_xxx" />

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            android:background="@color/gold_half" />
                    </TableRow>

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="0.5dp"
                        android:src="@color/gold_half" />

                    <TableRow
                        android:id="@+id/tableRow3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/view_sss_bbb"
                            android:layout_margin="0.5dip"
                            android:gravity="center"
                            android:text="成绩"
                            android:textColor="@color/gold"
                            android:textSize="@dimen/txsize_small_xxx" />

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            android:background="@color/gold_half" />
                    </TableRow>

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="0.5dp"
                        android:src="@color/gold_half" />

                    <TableRow
                        android:id="@+id/tableRow4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                           />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/view_sss_bbb"
                            android:layout_margin="0.5dip"
                            android:gravity="center"
                            android:text="距标准杆"
                            android:textColor="@color/gold"
                            android:textSize="@dimen/txsize_small_xxx" />

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            android:background="@color/gold_half" />
                    </TableRow>
                </TableLayout>

                <android.support.v4.view.ViewPager
                    android:id="@+id/viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >
                </android.support.v4.view.ViewPager>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/gold_half" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="@dimen/view_small_x"
                    android:layout_height="@dimen/view_small_x"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/view_small_xx_w"
                    android:src="@drawable/xintianwen" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:text="@string/xintianwen"
                    android:textColor="@color/gold_70"
                    android:textSize="@dimen/txsize_small_s" />

                <ImageView
                    android:layout_width="@dimen/view_small_x"
                    android:layout_height="@dimen/view_small_x"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/view_sss_bb"
                    android:src="@drawable/laoying" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:text="@string/laoyin"
                    android:textColor="@color/gold_70"
                    android:textSize="@dimen/txsize_small_s" />

                <ImageView
                    android:layout_width="@dimen/view_small_x"
                    android:layout_height="@dimen/view_small_x"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/view_sss_bb"
                    android:src="@drawable/xiaoniao" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:text="@string/xiao"
                    android:textColor="@color/gold_70"
                    android:textSize="@dimen/txsize_small_s" />

                <ImageView
                    android:layout_width="@dimen/view_small_x"
                    android:layout_height="@dimen/view_small_x"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/view_sss_bb"
                    android:src="@drawable/biaozhun" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:text="@string/biaozhun"
                    android:textColor="@color/gold_70"
                    android:textSize="@dimen/txsize_small_s" />

                <ImageView
                    android:layout_width="@dimen/view_small_x"
                    android:layout_height="@dimen/view_small_x"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/view_sss_bb"
                    android:src="@drawable/baiji" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:text="@string/baiji"
                    android:textColor="@color/gold_70"
                    android:textSize="@dimen/txsize_small_s" />

                <ImageView
                    android:layout_width="@dimen/view_small_x"
                    android:layout_height="@dimen/view_small_x"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/view_sss_bb"
                    android:src="@drawable/shuangbaiji" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:text="@string/shuangbaijijia"
                    android:textColor="@color/gold_70"
                    android:textSize="@dimen/txsize_small_s" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/gold_half" />

            <GridView
                android:id="@+id/gridView1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_sss_b"
                android:gravity="center"
                android:numColumns="2" >
            </GridView>

            <ListView
                android:id="@+id/count"
                android:layout_width="match_parent"
                android:layout_height="580dp"
                android:listSelector="@android:color/transparent"
                android:divider="@null" >
            </ListView>

            <ListView
                android:id="@+id/qiudong"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:listSelector="@android:color/transparent"
                android:divider="@null" >
            </ListView>

            <ListView
                android:id="@+id/qiutype"
                android:layout_width="match_parent"
                android:layout_height="430dp"
                android:listSelector="@android:color/transparent"
                android:divider="@null" >
            </ListView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>