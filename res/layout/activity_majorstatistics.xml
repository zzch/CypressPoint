<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:id="@+id/linear"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
       android:layout_height="@dimen/title_height"
        android:background="@color/daohang" >

        <TextView
            android:id="@+id/statistics"
            android:layout_width="wrap_content"
            android:layout_height="47dp"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="总成绩"
            android:textColor="@color/white"
            android:textSize="@dimen/txsize_mid_x" />

        <Button
            android:id="@+id/share"
            android:layout_width="80dp"
            android:layout_height="47dp" 
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="-10dp"
            android:background="@null"
            android:text="@string/text_share"
            android:textColor="@color/white"
            android:visibility="gone"
            android:textSize="@dimen/txsize_small_xx" />

       <FrameLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            >

        <Button
            android:id="@+id/back"
            android:layout_width="80dp"
            android:layout_height="47dp"
            android:layout_marginLeft="@dimen/title_button_left"
            android:background="@null"
            android:onClick="onClick"
            android:text="@string/back"
            android:textColor="@color/white"
            android:textSize="@dimen/txsize_small_xx" />
        
         <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/back_image"  />
		</FrameLayout>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_mid_xx_x"
                android:background="@color/white"
                 >

                <TextView
                    android:id="@+id/golf_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/view_small_x"
                    android:text="北京朝阳北湖高尔夫俱乐部"
                    android:textColor="@color/hei2"
                    android:layout_marginTop="13dp"
                    android:textSize="@dimen/txsize_small_xx" />

                
                <TextView
                    android:id="@+id/golf_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/golf_name"
                    android:layout_marginTop="13dp"
                    android:layout_marginLeft="@dimen/view_small_x"
                    android:text="2014年6月14日"
                    android:textColor="@color/hei2"
                    android:textSize="@dimen/txsize_small_x" />

                <RadioGroup
                    android:id="@+id/main_radio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="45dp"
                    android:gravity="right"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/view_small_xx"
                    android:background="@drawable/qianjiu"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/mainTabs_radio_qian"
                        android:layout_width="@dimen/view_mid_xx_title"
                        android:layout_height="@dimen/view_image_radio"
                       
                        android:button="@null"
                        android:gravity="center"
                         />

                    <RadioButton
                        android:id="@+id/mainTabs_radio_hou"
                        android:layout_width="@dimen/view_mid_xx_title"
                        android:layout_height="@dimen/view_image_radio"
                        android:layout_marginRight="@dimen/view_small_x"
                       
                        android:button="@null"
                         />
                </RadioGroup>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                
                android:background="@color/fengexian" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" 
                android:background="@color/white"
                >

                <TableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TableRow
                        android:id="@+id/tableRow1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            />

                        <TextView
                            android:layout_width="@dimen/view_sss_aaa"
                            android:layout_height="@dimen/view_small_xxx"
                            android:layout_margin="0.5dip"
                            android:gravity="center"
                            android:text="洞"
                            android:textColor="@color/hei2"
                            
                            android:textSize="@dimen/txsize_small_s" />

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            android:background="@color/fengexian" />
                    </TableRow>

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="0.5dp"
                        android:src="@color/fengexian" />

                    <TableRow
                        android:id="@+id/tableRow2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                             />

                        <TextView
                            android:layout_width="wrap_content"
                           android:layout_height="@dimen/view_small_xxx"
                            android:layout_margin="0.5dip"
                            android:gravity="center"
                            android:text="标准杆"
                            android:textColor="@color/hei2"
                            android:textSize="@dimen/txsize_small_s" />

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            android:background="@color/fengexian" />
                    </TableRow>

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="0.5dp"
                        android:src="@color/fengexian" />

                    <TableRow
                        android:id="@+id/tableRow3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/view_small_xxx"
                            android:layout_margin="0.5dip"
                            android:gravity="center"
                            android:text="成绩"
                            android:textColor="@color/hei2"
                            android:textSize="@dimen/txsize_small_s" />

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            android:background="@color/fengexian" />
                    </TableRow>

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="0.5dp"
                        android:src="@color/fengexian" />

                    <TableRow
                        android:id="@+id/tableRow4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                           />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/view_small_xxx"
                            android:layout_margin="0.5dip"
                            android:gravity="center"
                            android:text="距标准杆"
                            android:textColor="@color/hei2"
                            android:textSize="@dimen/txsize_small_s" />

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            android:background="@color/fengexian" />
                    </TableRow>
                </TableLayout>

                <android.support.v4.view.ViewPager
                    android:id="@+id/viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >
                </android.support.v4.view.ViewPager>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/fengexian" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:orientation="horizontal"
                android:background="@color/white"
                 >

                <ImageView
                    android:layout_width="@dimen/view_small_x"
                    android:layout_height="@dimen/view_small_x"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/view_small_xx_w"
                    android:src="@drawable/xintianwen" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:text="@string/xintianwen"
                    android:textColor="@color/hei5"
                    android:textSize="@dimen/txsize_small_s" />

                <ImageView
                    android:layout_width="@dimen/view_small_x"
                    android:layout_height="@dimen/view_small_x"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/view_sss_bb"
                    android:src="@drawable/laoying" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:text="@string/laoyin"
                    android:textColor="@color/hei5"
                    android:textSize="@dimen/txsize_small_s" />

                <ImageView
                    android:layout_width="@dimen/view_small_x"
                    android:layout_height="@dimen/view_small_x"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/view_sss_bb"
                    android:src="@drawable/xiaoniao" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:text="@string/xiao"
                    android:textColor="@color/hei5"
                    android:textSize="@dimen/txsize_small_s" />

                <ImageView
                    android:layout_width="@dimen/view_small_x"
                    android:layout_height="@dimen/view_small_x"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/view_sss_bb"
                    android:src="@drawable/biaozhun" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:text="@string/biaozhun"
                    android:textColor="@color/hei5"
                    android:textSize="@dimen/txsize_small_s" />

                <ImageView
                    android:layout_width="@dimen/view_small_x"
                    android:layout_height="@dimen/view_small_x"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/view_sss_bb"
                    android:src="@drawable/baiji" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:text="@string/baiji"
                    android:textColor="@color/hei5"
                    android:textSize="@dimen/txsize_small_s" />

                <ImageView
                    android:layout_width="@dimen/view_small_x"
                    android:layout_height="@dimen/view_small_x"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/view_sss_bb"
                    android:src="@drawable/shuangbaiji" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:text="@string/shuangbaijijia"
                    android:textColor="@color/hei5"
                    android:textSize="@dimen/txsize_small_s" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/fengexian" />
            
             <View 
              android:layout_width="match_parent"
               android:layout_height="0.5dp"
               android:layout_marginTop="20dp"
             
              />
             <RelativeLayout 
                 android:layout_width="match_parent"
                 android:layout_height="@dimen/view_sss_b"
                 android:background="@drawable/count_gridview_bg"
                 >

            <GridView
                android:id="@+id/gridView1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_sss_b"
                android:layout_marginTop="5dp"
                android:numColumns="2" >
            </GridView>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
               />
            
          <View 
              android:layout_width="match_parent"
               android:layout_height="0.5dp"
               android:layout_marginTop="20dp"
               android:background="@color/fengexian"
              />
			<RelativeLayout 
			    android:layout_width="match_parent"
			    android:layout_height="120dp"
			    android:background="@color/white"
			    >
			    <TextView 
			        android:layout_marginLeft="20dp"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="分段成绩"
			        android:textColor="#80ff961d"
			        android:layout_marginTop="20dp"
			        android:textSize="@dimen/txsize_small_xx"
			        />
			
            <cn.com.zcty.ILovegolf.tools.ScrollViewWithListView
                android:id="@+id/count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:listSelector="@android:color/transparent"
                android:background="@color/white"
                android:dividerHeight="0.5dp"
                android:divider="@color/fengexian" >
            </cn.com.zcty.ILovegolf.tools.ScrollViewWithListView>
                
			</RelativeLayout>
           <View 
              android:layout_width="match_parent"
               android:layout_height="0.5dp"
               android:background="@color/fengexian"
              />
        
        </LinearLayout>
    </ScrollView>

</LinearLayout>