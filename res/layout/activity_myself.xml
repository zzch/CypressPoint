<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@anim/pingpu"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
         android:layout_height="@dimen/title_height"
        android:background="@anim/title_pingpu" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="个人信息"
            android:textColor="@color/gold"
            android:textSize="@dimen/txsize_mid_x" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/myself_head_self"
        android:layout_width="match_parent"
        android:layout_height="143dp" >

        <cn.com.zcty.ILovegolf.tools.CircleImageView
            android:id="@+id/myself_head"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/hugh" />

        <ImageView
            android:layout_width="@dimen/view_small_xx"
            android:layout_height="@dimen/view_small_xx"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:src="@drawable/icon_arrow" />

        <TextView
            android:id="@+id/myself_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="10dp"
            android:text="游客"
            android:textColor="@color/gold"
            android:textSize="@dimen/txsize_mid_x" />

        <TextView
            android:id="@+id/myself_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:text="签名"
            android:textColor="@color/gold_70"
            android:textSize="@dimen/txsize_small_xx" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp" >

        <RelativeLayout
            android:id="@+id/myself_setting"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerVertical="true" >

            <ImageView
                android:id="@+id/myself_image"
                android:layout_width="@dimen/view_small_xx"
                android:layout_height="@dimen/view_small_xx"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@android:drawable/ic_input_add" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="50dp"
                android:text="设置" />

            <ImageView
                android:layout_width="@dimen/view_small_xx"
                android:layout_height="@dimen/view_small_xx"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:src="@drawable/jia" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>