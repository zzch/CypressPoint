<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:orientation="vertical" 
    android:background="@anim/pingpu"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/title_bg"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/title"
            android:textColor="@color/gold"
           android:layout_marginBottom="3dp"
            android:textSize="@dimen/txsize_mid_x" />
    </LinearLayout>
   
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_large_x"
        android:gravity="center"
        android:orientation="vertical" >
     

        <Button
            android:id="@+id/shiyitu_one"
            android:layout_width="300dp"
            android:layout_height="@dimen/view_mid_xx_xx"
            android:background="@drawable/button"
            android:onClick="shiyitu"
            android:text="@string/major_card"
            android:textSize="20dp"
            android:textColor="@color/gold"
             />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/view_small_x"
            android:text="@string/text_1"
            android:textColor="@color/gold_half"
            />
         <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_3"
            android:textColor="@color/gold_half"
            />

          <Button
            android:id="@+id/kuaijie_one"
            android:layout_width="300dp"
            android:layout_height="@dimen/view_mid_xx_xx"
            android:layout_marginTop="@dimen/view_mid_xx"
            android:background="@drawable/button"
            android:onClick="kuaijie"
            android:text="@string/easy_card"
            android:textSize="20dp"
            android:textColor="@color/gold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/view_small_x"
            android:text="@string/text_2"
            android:textColor="@color/gold_half" />
        
    </LinearLayout>
  
</LinearLayout>















